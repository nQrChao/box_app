<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_go_to_open_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/bg_user_vip_member"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@mipmap/ic_user_vip_member" />

        <TextView
            android:id="@+id/tv_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_dyx_month_card"
            android:textColor="#765423"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ts_shape_gradient_big_radius_855816_492d03"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:text="300%超值省"
            android:textColor="#FFEED5"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/shape_ff8ff5_6_radius_with_line_ffaa7b"
            android:drawableLeft="@mipmap/ic_coupon_store_left"
            android:drawableRight="@mipmap/ic_coupon_store_right"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:text="兑换商城券"
            android:textSize="14sp"
            android:textColor="#FF7C33"/>

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_fffaef_6_radius_with_line_f5c164"
            android:drawableLeft="@mipmap/ic_coupon_vip_left"
            android:drawableRight="@mipmap/ic_coupon_vip_right"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:text=" 领30元会员券"
            android:textSize="14sp"
            android:textColor="#765424"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="* 游戏代金券支持不同小号使用1次。若有多角色、换区需求，可创建不同小号在游戏浮标内额外领取。"
        android:textSize="12sp"
        android:textColor="#808080"/>

</LinearLayout>