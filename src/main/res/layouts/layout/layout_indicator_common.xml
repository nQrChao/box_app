<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <FrameLayout
        android:id="@+id/fl_indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
            android:id="@+id/dynamic_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            app:indicatorLineHeight="3dp"
            app:indicatorLineMarginBottom="0dp"
            app:indicatorLineMarginTop="12dp"
            app:indicatorLineScrollMode="dynamic"
            app:indicatorLineStartColor="@color/color_3478f6"
            app:indicatorLineWidth="120dp"
            app:pagerIndicatorMode="fixed"
            app:tabNormalTextColor="@color/color_1b1b1b"
            app:tabNormalTextSize="@dimen/small_text"
            app:tabSelectedBold="true"
            app:tabSelectedTextColor="@color/color_3478f6"
            app:tabSelectedTextSize="@dimen/small_text" />
    </FrameLayout>

</FrameLayout>