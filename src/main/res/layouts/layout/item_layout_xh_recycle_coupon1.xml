<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="8px"
        android:layout_width="270px"
        android:layout_height="306px"
        android:adjustViewBounds="true"
        android:src="@mipmap/img_xh_new_recycle_detail_coupon_1" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="108px"
        android:layout_height="75px"
        android:gravity="center"
        android:paddingBottom="12px"
        android:layout_marginRight="-15px"
        android:layout_alignRight="@+id/image"
        android:layout_marginTop="3px"
        android:background="@mipmap/img_xh_new_recycle_detail_coupon_1_1"
        android:includeFontPadding="false"
        android:text="x10"
        android:textColor="#fff"
        android:textSize="28px" />

    <LinearLayout
        android:id="@+id/yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72px"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥"
            android:textColor="#2C38B2"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coupon_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17000"
            android:textColor="#2C38B2"
            android:textStyle="bold"
            android:textSize="50px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_coupon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:maxWidth="250px"
        android:singleLine="true"
        android:text="满600元可用"
        android:textColor="#848DE6"
        android:textSize="28px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238px"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="特惠卡代金券"
        android:textColor="#fff"
        android:textSize="40px" />

</RelativeLayout>