<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/color_f5f5f5">

    <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
        android:id="@+id/dynamic_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        app:indicatorLineHeight="3dp"
        app:indicatorLineMarginBottom="0dp"
        app:indicatorLineMarginTop="8dp"
        app:indicatorLineScrollMode="dynamic"
        app:indicatorLineWidth="24dp"
        app:pagerIndicatorMode="fixed"
        app:tabNormalTextColor="@color/color_1b1b1b"
        app:tabNormalTextSize="@dimen/small_micro_text"
        app:tabSelectedTextColor="@color/color_ffca00"
        app:tabSelectedTextSize="@dimen/small_micro_text" />
</FrameLayout>