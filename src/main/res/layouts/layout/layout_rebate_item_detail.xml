<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="游戏名"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="山海经3D(满V版)"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="充值小号"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_xh_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="S7W2313121"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="充值时间"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_recharge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="2018-06-21"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="充值金额"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_recharge_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="300.00元"
                android:textColor="@color/color_ff0000"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="游戏区服"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_game_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="兵临城下"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="角色名"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_role_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="小猪佩奇"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_role_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_str_role_id"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="角色ID"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_role_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="945121313"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="道具申请"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_apply_reward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.25"
                android:text="传奇看久了看*1、涅槃天玄蛋*50、涅槃 天玄蛋*50"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.25"
                android:text="传奇看久了看*1、涅槃天玄蛋*50、涅槃 天玄蛋*50"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_radius_solid_gray"
                android:gravity="center"
                android:text="申请时间"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="2018-06-21  11：21:29"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/btn_action"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="18dp"
        android:background="#FFF3E7"
        android:text="有疑问，咨询客服"
        android:textColor="@color/color_ff8f19"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/ll_two_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:text="联系客服"
            android:textColor="@color/color_999999"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_action_2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_yellow_big_radius"
            android:text="重新申请"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>