<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape_white_radius"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="14dp"
            android:text="小号未满足回收条件"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.1"
            android:text="1、有效实付需满30元（不包含代金券等优惠）。若为购买小号，则计算购买后的实付。"
            android:textSize="14sp"
            android:textColor="#232323"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.1"
            android:text="2、参与过转游的小号不可回收。"
            android:textSize="14sp"
            android:textColor="#232323"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.1"
            android:text="3、小号回收条件会根据实际运营情况调整，更多不满足回收条件，请点击前往回收规则查看。"
            android:textSize="14sp"
            android:textColor="#232323"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_2"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ts_shape_4e76ff_10_radius"
            android:textStyle="bold"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>