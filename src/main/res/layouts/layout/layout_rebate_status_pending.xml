<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="26dp"
    android:paddingTop="26dp">

    <com.allen.library.SuperButton
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="返利状态"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:sCornersRadius="20dp"
        app:sSolidColor="#552B5BE2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="等待受理"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="即将提交游戏商处理，期间请勿改名"
        android:textColor="#FFF000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/drawable_dot_dcdfff"
                android:gravity="center"
                android:text="1"
                android:includeFontPadding="false"
                android:textColor="#737DF0"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginLeft="6dp"
                android:text="若返利信息无误，则在申请后24小时内到账；"
                android:textColor="#DCDFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/drawable_dot_dcdfff"
                android:gravity="center"
                android:text="2"
                android:textColor="#737DF0"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.25"
                android:text="遇节假日则有可能延迟，请耐心等待！"
                android:textColor="#DCDFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>