<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_game_appointment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:visibility="gone">


    <TextView
        android:id="@+id/tv_appointment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="12dp"
        android:text="1月1日首发上线"
        android:textColor="@color/color_ff0000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_game_appointment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:text="预约"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_appointment_download"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ts_shape_4e76ff_big_radius_with_line">

            <TextView
                android:id="@+id/tv_appointment_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="预下载"
                android:textColor="#4E76FF"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>



</LinearLayout>