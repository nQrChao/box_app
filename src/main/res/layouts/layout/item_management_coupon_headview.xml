<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/tab_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_coupon_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="待使用"
                android:textSize="@dimen/text_size_micro" />


            <RadioButton
                android:id="@+id/tab_coupon_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已使用"
                android:textSize="@dimen/text_size_micro" />

            <RadioButton
                android:id="@+id/tab_coupon_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已过期"
                android:textSize="@dimen/text_size_micro" />

            <RadioButton
                android:id="@+id/tab_coupon_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="兑换礼券"
                android:textSize="@dimen/text_size_micro" />

        </RadioGroup>

    </LinearLayout>

    <!--   layout="@layout/layout_vip_month_card"-->

    <include
        layout="@layout/layout_open_vip_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/ll_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_exchange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_radius"
                android:hint="请输入礼券码"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                android:textColor="@color/color_777777"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:text="兑换"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.25"
            android:text="①礼券兑换码获取：关注并参与平台活动\n②礼券兑换码使用：在上方输入框内填写兑换码进行兑换即可！"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>