<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp">
    <com.youth.banner.Banner
        android:layout_marginBottom="10dp"
        android:id="@+id/list2_banner"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:indicator_drawable_selected="@drawable/main_banner_indicator_selected"
        app:indicator_drawable_unselected="@drawable/main_banner_indicator_unselected" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginEnd="5dp"
            android:id="@+id/list2_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_list2_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="5dp"
            android:text="默认排序"
            android:textColor="#333333"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_list2_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/ic_layout_ts_game_detail_qa_1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list2_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#EAEAEA" />
</LinearLayout>