<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_game_detail_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_game_detail_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ts_shape_f3f7ff_radius">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:src="@mipmap/ic_game_detail_top_label_1" />

            <TextView
                android:id="@+id/tv_game_top_server_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="今日 15:00"
                android:textColor="@color/color_424242"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_game_top_server_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_game_top_server_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:text="无双21区"
                android:textColor="@color/color_919191"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_new_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_game_top_server_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="新服"
                android:textColor="@color/color_0052ef"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/rl_game_detail_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ts_shape_f3f7ff_radius">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:src="@mipmap/ic_game_detail_top_label_2" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="代金券"
                android:textColor="@color/color_424242"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_coupon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_1"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_1"
                android:text="(4)"
                android:textColor="@color/color_ff0000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:text="用优惠券更划算"
                android:textColor="@color/color_919191"
                android:textSize="12sp" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>





