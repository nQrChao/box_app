<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingTop="26dp">

    <com.allen.library.SuperButton
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="返利状态"
        android:textColor="#818181"
        android:textSize="12sp"
        app:sCornersRadius="20dp"
        app:sSolidColor="#55D2D2D2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="申请失败"
        android:textColor="@color/color_333333"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_failure_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:lineSpacingMultiplier="1.25"
        android:text="失败原因：申请的道具没有备注要什么，另外角色信息 不对请仔细检查您提供的角色名 / 角色ID / 区服信息"
        android:textColor="#FF0000"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/drawable_dot_808080"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"
                android:text="请您核对失败原因，修改并重新提交；"
                android:textColor="@color/color_818181"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/drawable_dot_808080"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"
                android:text="如对失败原因有疑问，请联系客服咨询。"
                android:textColor="@color/color_818181"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>