<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_game_download"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_game_detail_favorite"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:drawableTop="@mipmap/ic_audit_transaction_good_detail_1"
        android:drawablePadding="5dp"
        android:text="收藏"
        android:textSize="12sp"
        android:textColor="#232323"/>

    <LinearLayout
        android:id="@+id/fl_cloud_layout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginVertical="8dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_ffa530_ff3572_big_radius2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cloud_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="云试玩"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/download_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_color"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_game_detail_downloading"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:text="立即下载"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_write_comment"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:drawableTop="@mipmap/ic_game_detail_comment"
        android:text="点评"
        android:textSize="12sp"
        android:textColor="#232323"/>

</LinearLayout>