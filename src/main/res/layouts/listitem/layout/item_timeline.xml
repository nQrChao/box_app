<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_dot_808080" />

        <View
            android:id="@+id/line_normal_top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@id/view_dot"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dotted_line_y"
            android:visibility="visible" />

        <View
            android:id="@+id/line_normal_bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@id/view_dot"
            android:layout_centerInParent="true"
            android:background="@drawable/dotted_line_y"
            android:visibility="visible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:includeFontPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/color_818181"
        android:textSize="14sp" />

</LinearLayout>