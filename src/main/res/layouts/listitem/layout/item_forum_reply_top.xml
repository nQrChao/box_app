<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fl_rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/civ_portrait"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_user_login_new_sign" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="#9B9B9B"
                        android:textSize="12sp"
                        tools:text="一分钟前" />

                    <TextView
                        android:id="@+id/tv_play_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:includeFontPadding="false"
                        android:textColor="#5571FE"
                        android:textSize="12sp"
                        tools:text="时长0.5h" />


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_item_forum_list_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="攻略指南" />

        <LinearLayout
            android:id="@+id/ll_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="@string/string_sample" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_comment_pic_1"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="46dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_placeholder_h"
                app:shapeAppearance="@style/RoundedStyle10"
                app:strokeColor="@color/transparent" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comment_like"
        app:layout_constraintLeft_toLeftOf="@+id/fl_rootView"
        app:layout_constraintTop_toTopOf="@+id/tv_comment_like"
        tools:text="2楼 · 回复" />

    <TextView
        android:id="@+id/tv_comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:drawableLeft="@mipmap/ic_item_forum_list_1"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_rootView" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_like" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="展开更多"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/tv_more" />

</androidx.constraintlayout.widget.ConstraintLayout>