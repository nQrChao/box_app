<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/localGameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_60"
        android:layout_marginHorizontal="@dimen/idp_10"
        android:layout_marginTop="@dimen/idp_5"
        android:background="@drawable/local_game_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/localGameIcon"
            android:layout_width="@dimen/idp_35"
            android:layout_height="@dimen/idp_35"
            android:layout_marginStart="@dimen/idp_10"
            android:src="@mipmap/mod_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/localGameNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_5"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/localGameIcon"
            app:layout_constraintStart_toEndOf="@id/localGameIcon"
            app:layout_constraintTop_toTopOf="@id/localGameIcon">

            <TextView
                android:id="@+id/localGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mod_icon"
                android:text="@string/app_name"
                android:textSize="@dimen/isp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/localGameDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mod_icon"
                android:text="闯关·单机"
                android:textColor="#818181"
                android:textSize="@dimen/isp_11"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/localGameBi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_marginEnd="@dimen/idp_5"
            android:src="@drawable/local_game_title_bi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/localGameBiText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/localGameBiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/idp_12"
            android:maxLines="1"
            android:text="我的福利币：0.0"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/localGameButton"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/localGameButton"
            android:layout_width="@dimen/idp_65"
            android:layout_height="@dimen/idp_28"
            android:layout_marginEnd="@dimen/idp_10"
            android:background="@drawable/local_game_title_button_cancel_selector"
            android:text="回到游戏"
            android:textColor="#B33FFA"
            android:textSize="@dimen/isp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_recycler_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_00000000_9e000000_000000_15_radius"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingTop="60dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_game_suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ts_shape_ebebeb_big_radius"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="3dp"
                            android:text="@string/app_name"
                            android:textColor="#666666"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_info_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:includeFontPadding="false"
                            android:text="@string/app_name"
                            android:textColor="#D6D6D6"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_discount_1"
                        android:layout_width="56dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/shape_4e76ff_7119c4_big_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_discount_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.0"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="折"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_discount_2"
                        android:layout_width="64dp"
                        android:layout_height="34dp"
                        android:background="@mipmap/ic_game_info_discount_bg_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精品"
                            android:textColor="@color/color_F2F4FF"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游戏"
                            android:textColor="@color/color_F2F4FF"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_discount_3"
                        android:layout_width="64dp"
                        android:layout_height="34dp"
                        android:background="@mipmap/ic_game_info_discount_bg_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_discount_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6.0"
                                android:textColor="@color/color_F2F4FF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="折"
                                android:textColor="@color/color_F2F4FF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精品游戏"
                            android:textColor="@color/color_F2F4FF"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_discount4"
                        android:layout_width="56dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/shape_4e76ff_7119c4_big_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始玩"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>