<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_10"
    android:orientation="vertical"
    android:paddingVertical="18dp"
    android:layout_marginVertical="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="26dp">

    <TextView
        android:id="@+id/pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#232323"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="购买时间：2023-02-27" />

    <TextView
        android:id="@+id/expiry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#232323"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_time"
        tools:text="有效期至：2023-03-30" />

    <TextView
        android:id="@+id/purchase_member_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#232323"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="周卡" />

    <TextView
        android:id="@+id/purchase_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#232323"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="30天周卡" />

</androidx.constraintlayout.widget.ConstraintLayout>