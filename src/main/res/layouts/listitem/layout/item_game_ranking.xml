<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_white_radius_2">

    <RelativeLayout
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ffffff_f8f9ff_15_radius"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gameIconIV"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@mipmap/ic_placeholder"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_game_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:layout_marginRight="5dp"
                                android:text="@string/app_name"
                                android:textColor="@color/color_232323"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_game_first_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/shape_fdba54_other_radius"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingHorizontal="3dp"
                                android:paddingVertical="2dp"
                                android:text="首发"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_game_reserve_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="4dp"
                                android:background="@drawable/shape_fe4e84_ff2bd5_4_radius"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_game_normal_reserve"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="新游预约"
                                    android:textColor="#FEEEBB"
                                    android:textSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_info_middle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginRight="5dp"
                                android:lines="1"
                                android:ellipsize="end"
                                android:text="@string/app_name"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_game_suffix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:background="@drawable/shape_2_radius_with_line_d6d6d6"
                                android:paddingHorizontal="2dp"
                                android:paddingVertical="1dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/app_name"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_play_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginRight="5dp"
                                android:text="@string/app_name"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_1"
                            android:layout_width="56dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:background="@drawable/shape_4e76ff_7119c4_big_radius"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_discount_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="6.0"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="折"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_2"
                            android:layout_width="64dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="精品"
                                android:textSize="10sp"
                                android:textColor="#3158F6"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="游戏"
                                android:textSize="10sp"
                                android:textColor="#3158F6"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_3"
                            android:layout_width="64dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_discount_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="6.0"
                                    android:textSize="14sp"
                                    android:textColor="#3158F6"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="折"
                                    android:textSize="12sp"
                                    android:textColor="#3158F6"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="精品游戏"
                                android:textSize="9sp"
                                android:textColor="#3158F6"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_4"
                            android:layout_width="64dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="免费版"
                                android:textSize="14sp"
                                android:textColor="#3158F6"/>

                            <TextView
                                android:id="@+id/tv_discount_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="0.1折"
                                android:textSize="9sp"
                                android:textColor="#4E76FF"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_5"
                            android:layout_width="64dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_discount_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="6.0"
                                    android:textSize="14sp"
                                    android:textColor="#3158F6"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="折"
                                    android:textSize="12sp"
                                    android:textColor="#3158F6"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专服版"
                                android:textSize="9sp"
                                android:textColor="#3158F6"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_discount_6"
                            android:layout_width="64dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="专服"
                                android:textSize="10sp"
                                android:textColor="#3158F6"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="游戏"
                                android:textSize="10sp"
                                android:textColor="#3158F6"/>

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_discount_3"
                            android:layout_width="56dp"
                            android:layout_height="26dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:background="@drawable/ts_shape_4e77fe_big_radius"
                            android:textStyle="bold"
                            android:text="开始玩"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_discount_6"
                            android:layout_width="61dp"
                            android:layout_height="36dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_game_info_discount_label"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.flexbox.FlexboxLayout
                                android:id="@+id/flex_box_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:visibility="gone"
                                app:alignContent="flex_start"
                                app:alignItems="center"
                                app:flexDirection="row"
                                app:flexWrap="wrap"
                                app:justifyContent="flex_start"
                                app:showDivider="beginning|middle" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/tv_info_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/color_7d7d7d"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_rootview"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#999999"
        android:textSize="16sp"
        tools:text="4"/>

</RelativeLayout>