<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="14dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/shape_white_radius_3"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/iv_game_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_placeholder" />


        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_game_icon"
            android:singleLine="true"
            android:text="君赦天下"
            android:textColor="@color/color_232323"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_game_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_game_icon"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_game_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginRight="5dp"
                android:maxWidth="85dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:textColor="#4E76FF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_game_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="君赦天下"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/line_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_xh_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:text="小号1"
            android:textColor="@color/color_232323"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_xh_account_redemption"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ts_shape_0052fe_radius"
            android:gravity="center"
            android:text="赎回"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reward_real"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/tv_xh_account"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="回收代金券总额：130"
            android:textColor="#FF4D63"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_recycle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_reward_real"
            android:layout_alignBottom="@id/tv_reward_real"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="2019/03/28  11:53"
            android:textColor="@color/color_818181"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>