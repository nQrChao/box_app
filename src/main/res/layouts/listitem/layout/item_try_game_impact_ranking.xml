<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/shape_white_radius"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/iv_ranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_try_game_impact_ranking_1" />


            <TextView
                android:id="@+id/tv_ranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_tab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1000积分"
            android:singleLine="true"
            android:textColor="@color/color_ff4949"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_tab_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="JY****5"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tab_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="02/23  21:00"
            android:textColor="@color/color_818181"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>