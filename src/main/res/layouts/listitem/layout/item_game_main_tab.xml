<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_game_main_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/color_f9f9f9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingTop="6dp"
            android:paddingRight="14dp"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="墙裂推荐"
                android:textColor="@color/color_232323"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="即使身处绝境,也要先玩一局!"
                android:textColor="@color/color_9b9b9b"
                android:textSize="13sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_tab_discount"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/ll_tab_discount_1"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_f2f2f2"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/rb_tab_discount_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:text="精品游戏"
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_tab_discount_2"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_0052ef"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rb_tab_discount_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:text="火爆热门"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:id="@+id/ll_tab_discount_3"
                    android:layout_width="86dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_f2f2f2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rb_tab_discount_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:button="@null"
                        android:text="最新上架"
                        android:textColor="@color/color_232323"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/view_red_dot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/rb_tab_discount_3"
                        android:background="@drawable/drawable_dot_ff0000"
                        android:visibility="gone" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-12dp"
                    android:layout_toRightOf="@id/ll_tab_discount_3"
                    android:src="@mipmap/ic_main_game_new" />
            </RelativeLayout>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_main_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/tv_main_tab_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="热门推荐"
                    android:textColor="@color/color_0052ef"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_main_tab_sub_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="火爆热门"
                    android:textColor="@color/color_5191ff"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tv_main_tab_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_main_tab_selected" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_ebebeb" />

            <LinearLayout
                android:id="@+id/ll_main_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_tab_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="新游上架"
                        android:textColor="@color/color_232323"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_main_tab_sub_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="最新上架"
                        android:textColor="@color/color_858585"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/tv_main_tab_image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:src="@mipmap/ic_main_tab_selected"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_main_game_new" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_tab_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_main_tab_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="预约"
                    android:textColor="@color/color_232323"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_main_tab_sub_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="抢先体验"
                    android:textColor="@color/color_858585"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/tv_main_tab_image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_main_tab_selected"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_tab_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_main_tab_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="赚金"
                    android:textColor="@color/color_232323"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_main_tab_sub_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="每日福利"
                    android:textColor="@color/color_858585"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/tv_main_tab_image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_main_tab_selected"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_game_appointment_tips"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ts_shape_radius_fff3e8"
            android:gravity="center"
            android:text="新游信息第一时间掌握，好游戏值得期待！"
            android:textColor="@color/color_272727"
            android:textSize="12dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_game_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/line_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="近期 · 都在玩的热门好游戏"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
    </LinearLayout>

</LinearLayout>