<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_2">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_ranking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="64dp"
            android:includeFontPadding="false"
            android:drawablePadding="8dp"
            android:textSize="13.5sp"
            android:textColor="@color/color_9b9b9b"
            android:singleLine="true"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_main_game_ranking_type_1"
            android:text="一路升官加爵，坐拥三千佳丽！"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_main_game_ranking_tag"/>


            <TextView
                android:id="@+id/tv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:includeFontPadding="false"
                android:layout_gravity="right"
                android:textColor="@color/color_ff4444"
                android:text="NO.1"/>
        </FrameLayout>


    </FrameLayout>

    <include layout="@layout/item_game_normal"/>


</LinearLayout>