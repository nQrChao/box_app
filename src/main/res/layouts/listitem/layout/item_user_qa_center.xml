<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f5f5">

    <LinearLayout
        android:id="@+id/ll_rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/white_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_game_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_placeholder" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <ImageView
                    android:id="@+id/iv_question_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/ic_user_question_complete"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_818181"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:id="@+id/fl_user_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:text="积分"
                                android:textColor="@color/color_ff8f19"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_integral_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:background="@color/color_ff8f19"
                                android:gravity="center"
                                android:minWidth="34dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="+50"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_game_question_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:lines="2"
                        android:ellipsize="end"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />


                        <TextView
                            android:id="@+id/tv_all_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:padding="6dp"
                            android:text="查看全部0个回答"
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_not_approved_mask_layer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2FFFFFF"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:padding="6dp"
                        android:text="未通过审核"
                        android:textColor="@color/color_ff0000"
                        android:textSize="12sp" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_need_answer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <FrameLayout
                android:id="@+id/fl_write_answer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/ic_user_answer_write_orange"
                    android:drawablePadding="6dp"
                    android:text="去回答"
                    android:textColor="@color/color_ff8f19" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>