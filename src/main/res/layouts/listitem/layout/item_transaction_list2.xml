<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_ffffff_15_radius"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="30dp">

        <com.zqhy.app.widget.imageview.ClipRoundImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_placeholder"
            app:roundImageViewBorderRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_transaction_game_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_232323"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_title_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_title_icon"
            android:layout_marginEnd="70dp"
            tools:text="拥堵的城市" />

        <TextView
            android:id="@+id/tv_server_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_f2f2f2"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:textColor="@color/color_9b9b9b"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_transaction_game_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_transaction_game_name"
            tools:text="服区：二区，天天" />

        <TextView
            android:id="@+id/tv_info_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/color_9b9b9b"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_server_info"
            app:layout_constraintStart_toEndOf="@+id/tv_server_info"
            app:layout_constraintTop_toTopOf="@+id/tv_server_info"
            tools:text="角色·回合·6521人在玩" />

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="2dp"
            android:singleLine="true"
            android:textColor="@color/color_202020"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/iv_title_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_title_icon"
            tools:text="老区闲置号，洪荒套，装机甲都有" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_explain">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"

                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="5dp" />

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="5dp" />

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="5dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/iv_title_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_title_icon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="¥"
                android:textColor="@color/color_ff2b3f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_transaction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/color_ff2b3f"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>