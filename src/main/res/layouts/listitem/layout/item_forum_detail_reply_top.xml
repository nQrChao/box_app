<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fl_rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/civ_portrait"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_user_login_new_sign" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="#9B9B9B"
                        android:textSize="12sp"
                        tools:text="一分钟前" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/tv_play_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="#5571FE"
                        android:textSize="12sp"
                        tools:text="时长0.5h" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="攻略指南" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#333333"
            android:textSize="15sp"
            android:maxLines="3"
            tools:text="@string/string_sample" />

        <LinearLayout
            android:id="@+id/ll_comment_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/iv_comment_pic_1"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginRight="6dp"
                android:src="@mipmap/ic_placeholder"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_comment_pic_2"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginRight="6dp"
                android:src="@mipmap/ic_placeholder"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/fl_comment_pic_3"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginRight="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_comment_pic_3"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:src="@mipmap/ic_placeholder" />


            </FrameLayout>
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@mipmap/ic_item_forum_list_2"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="0"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_comment_like"
        app:layout_constraintTop_toBottomOf="@+id/fl_rootView" />

    <TextView
        android:id="@+id/tv_comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:drawableLeft="@mipmap/ic_item_forum_list_1"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:text="0"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_rootView" />


    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="20dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/tv_comments" />

</androidx.constraintlayout.widget.ConstraintLayout>