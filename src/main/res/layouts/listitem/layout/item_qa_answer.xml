<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingTop="12dp"
        android:paddingRight="14dp"
        android:paddingBottom="6dp">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/profile_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:src="@mipmap/ic_user_login" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="240dp"
                    android:singleLine="true"
                    android:text="迷茫的小和尚和上社撒旦教卡"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1">

                    <include layout="@layout/layout_user_level_item" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_integral_gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="积分"
                        android:textColor="@color/color_ff8f19"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_integral_gain"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:background="@color/color_ff8f19"
                        android:gravity="center"
                        android:minWidth="34dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="+50"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_game_user_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.15"
                android:layout_marginTop="6dp"
                android:text="@string/string_sample"
                android:textColor="@color/color_232323"
                android:textSize="12sp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_answer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="1月12日"
                    android:textColor="@color/color_d6d6d6"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:drawableLeft="@mipmap/ic_new_game_comment_like"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="48dp"
        android:background="@color/line_color" />

</LinearLayout>