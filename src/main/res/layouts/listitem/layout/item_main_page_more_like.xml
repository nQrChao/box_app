<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zqhy.app.widget.TitleTextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:tt_isTextBold="true"
        app:tt_lineStartColor="#0079FB"
        app:tt_lineEndColor="#0D9EFF"
        app:tt_text="更多你可能喜欢的游戏"
        app:tt_textColor="@color/color_232323"
        app:tt_textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@mipmap/img_main_page_more_like"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_game_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>