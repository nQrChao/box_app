<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root_bg"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_radius_stroke_fd892d"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vip_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            tools:text="周卡版"
            android:textSize="10sp"
            android:textColor="#FD892D"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@+id/tv_vip_member_amount"
                app:layout_constraintBottom_toBottomOf="@+id/tv_vip_member_amount"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:text="¥"
                android:textSize="11sp"
                android:textColor="#FD892D"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_vip_member_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                tools:text="28"
                android:textSize="28sp"
                android:textColor="#FD892D"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vip_member_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="立返28福利币"
            android:textSize="10sp"
            android:textColor="#FE351A"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vip_member_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_fd892d_radius"
            android:paddingVertical="6dp"
            android:gravity="center"
            tools:text="再赠70币"
            android:textSize="11sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        android:id="@+id/tv_vip_member_free_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ts_shape_gradient_ff5b0a_ff150d"
        android:layout_marginRight="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="4dp"
        tools:text="已额外赠5天"
        android:textSize="8sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>