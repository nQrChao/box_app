<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:background="@drawable/shape_white_radius_10"
        android:layout_width="match_parent"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zqhy.app.widget.imageview.ClipRoundImageView
                    android:id="@+id/iv_transaction_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_placeholder"
                    app:roundImageViewBorderRadius="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_transaction_game_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/color_232323"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_transaction_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_game_suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:layout_marginRight="5dp"
                            android:maxWidth="85dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:text="@string/app_name"
                            android:textColor="#4E76FF"
                            android:textSize="14sp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_genre_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10sp"
                            android:textColor="@color/color_9b9b9b"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_play_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10sp"
                            android:textColor="@color/color_9b9b9b"
                            />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_server_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:paddingVertical="2dp"
                            android:paddingHorizontal="5dp"
                            android:background="@color/color_f2f2f2"
                            android:textColor="@color/color_9b9b9b"
                            />

                        <TextView
                            android:id="@+id/tv_explain1"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:paddingVertical="2dp"
                            android:textColor="@color/color_9b9b9b"
                            />





                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/tv_transaction_xh_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/color_999999"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="¥"
                            android:textColor="@color/color_ff0000"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_transaction_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/color_ff0000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layout_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/ic_audit_transaction_good_detail_7"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="7dp"
                                android:layout_marginLeft="3dp"
                                android:text="0.19折"
                                android:textColor="#FFE37B"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_percent1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="7dp"
                                android:text="抄底"
                                android:textColor="#fff"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:background="@color/line_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_transaction_good_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_transaction_good_status1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_232323_big_radius_with_line"
                        android:gravity="center"
                        android:text=" ? "
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_transaction_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text=""
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/tv_count_down_transaction_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:isHideTimeBackground="true"
                        app:isShowDay="false"
                        app:isShowHour="false"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:suffixGravity="center"
                        app:suffixMinute=":"
                        app:suffixTextColor="@color/color_cccccc"
                        app:suffixTextSize="12sp"
                        app:timeTextColor="@color/color_cccccc"
                        app:timeTextSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_btn_action_1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:minWidth="46dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_btn_action_2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:minWidth="46dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_transaction_fail_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:textColor="@color/color_ff4949"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/ts_shape_5_gradient_403f53_646082"
            android:paddingHorizontal="7dp"
            android:paddingVertical="12dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>