<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <include layout="@layout/layout_ts_game_detail_collapsing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_648"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title_648"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:text="送648"
                    android:textSize="16sp"
                    android:textColor="#FF2D3F"/>

                <TextView
                    android:id="@+id/tv_action_648"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_648"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/shape_ffe9e6_5_radius"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="3dp"
                    android:text="去使用"
                    android:textSize="12sp"
                    android:textColor="#FF2D3F"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#F2F2F2"
                    app:layout_constraintTop_toTopOf="@+id/tv_action_648"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_action_648"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_activi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title_activi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#363636"/>

                <TextView
                    android:id="@+id/tv_action_activi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_activi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="6dp"
                    android:drawableRight="@mipmap/ic_game_detail_arrow_more"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="高返利活动"
                    android:textSize="12sp"
                    android:textColor="#363636"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#F2F2F2"
                    app:layout_constraintTop_toTopOf="@+id/tv_action_activi"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_action_activi"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_gift_bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title_gift_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#363636"/>

                <TextView
                    android:id="@+id/tv_action_gift_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_gift_bag"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="6dp"
                    android:drawableRight="@mipmap/ic_game_detail_arrow_more"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="领礼包"
                    android:textSize="12sp"
                    android:textColor="#363636"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#F2F2F2"
                    app:layout_constraintTop_toTopOf="@+id/tv_action_gift_bag"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_action_gift_bag"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_voucher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_title_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="¥"
                        android:textSize="16sp"
                        android:textColor="#363636"/>

                    <TextView
                        android:id="@+id/tv_title_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#363636"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_action_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ll_title_voucher"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="6dp"
                    android:drawableRight="@mipmap/ic_game_detail_arrow_more"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="领代金券"
                    android:textSize="12sp"
                    android:textColor="#363636"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_eef3fe_10_radius">

                <ViewFlipper
                    android:id="@+id/viewflipper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoStart="true"
                    android:flipInterval="2500"
                    android:inAnimation="@anim/vf_anim_in"
                    android:outAnimation="@anim/vf_anim_out" />

                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:text="加入群聊>"
                    android:textSize="15sp"
                    android:textColor="#3158F6"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>