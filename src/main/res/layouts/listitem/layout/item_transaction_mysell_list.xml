<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="10dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_transaction_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/color_232323"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginRight="5dp"
                        android:maxWidth="85dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:text="@string/app_name"
                        android:textColor="#4E76FF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_xh_showname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小号:  "
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_xh_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9aq40，"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_xh_reg_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创建2153天"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:text="累计消费： "
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_xh_pay_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/color_ff2b3f"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ban_trade_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_audit_transaction_sell_2" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_audit_transaction_sell_7" />

    <ImageView
        android:id="@+id/iv_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="25dp"
        android:src="@mipmap/ic_audit_transaction_sell_1" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_ban_trade_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ts_shape_5_gradient_403f53_646082"
        android:paddingHorizontal="11dp"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:text="禁售小号：角色永久禁言"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>