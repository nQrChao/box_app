<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gameIconIV"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="6dp"
                android:src="@mipmap/ic_placeholder" />

            <TextView
                android:id="@+id/tv_sub_tag"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignRight="@+id/gameIconIV"
                android:layout_marginRight="-6dp"
                android:background="#FF5400"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="gone"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:textSize="10sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_game_discount_tag" />
            </FrameLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxWidth="67dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_565656"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxWidth="67dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_868686"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_action_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginTop="6dp"
            android:text="开始"
            android:textColor="@color/color_1e64eb" />
    </LinearLayout>


</LinearLayout>