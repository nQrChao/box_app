<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/layout_bt_boutique_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="12dp">


        <TextView
            android:id="@+id/tv_collection_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="6dp"
            android:drawableLeft="@mipmap/ic_integral_mall"
            android:text="积分商城"
            android:visibility="gone"
            android:textColor="@color/color_ff8f19"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_boutique_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="精品游戏"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <HorizontalScrollView
        android:id="@+id/game_boutique_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_boutique_games_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

</LinearLayout>