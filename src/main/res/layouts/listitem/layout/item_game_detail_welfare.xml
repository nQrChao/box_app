<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@mipmap/ic_game_detail_bt_welfare"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏福利"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_game_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ts_shape_4e76ff_2_radius_with_line"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="1dp"
            android:text="横屏游戏"
            android:textSize="12sp"
            android:textColor="#4E76FF"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ts_shape_4e76ff_2_radius_with_line"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="1dp"
            android:text="双端互通"
            android:textSize="12sp"
            android:textColor="#4E76FF"/>

        <ImageView
            android:id="@+id/iv_tips"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/ic_game_detail_rebate_tips"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="去领更多福利 >"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.3"
        android:letterSpacing="0.05"
        android:ellipsize="end"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/color_232323"/>

    <TextView
        android:id="@+id/tv_fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:paddingVertical="7dp"
        android:drawableRight="@mipmap/ic_game_detail_rebate_arrow_down"
        android:text="展开"
        android:textSize="13sp"
        android:textColor="#4E76FF"/>

</LinearLayout>