<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_transaction_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/color_232323"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_game_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginRight="5dp"
                        android:maxWidth="85dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:text="@string/app_name"
                        android:textColor="#4E76FF"
                        android:textSize="14sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_genre_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="@color/color_9b9b9b"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_play_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="@color/color_9b9b9b"
                        />

                    <TextView
                        android:id="@+id/tv_server_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:layout_marginRight="5dp"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="5dp"
                        android:background="@color/color_f2f2f2"
                        android:textColor="@color/color_9b9b9b"
                        />


                    <TextView
                        android:id="@+id/tv_explain"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:paddingVertical="2dp"
                        android:textColor="@color/color_9b9b9b"
                        />




                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_transaction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_cccccc"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="5dp" />

            <com.zqhy.app.widget.imageview.ClipRoundImageView
                android:id="@+id/iv_transaction_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_placeholder"
                app:roundImageViewBorderRadius="5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_percent"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_audit_transaction_8"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp">

                        <TextView
                            android:id="@+id/tv_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.19折"
                            android:textColor="#FFE37B"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_percent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="抄底"
                            android:textColor="#fff"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
                <!--                <TextView-->
                <!--                    android:id="@+id/tv_transaction_title"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:gravity="center_vertical"-->
                <!--                    android:singleLine="true"-->
                <!--                    android:textColor="@color/color_9b9b9b"-->
                <!--                    android:textSize="12sp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="¥"
                        android:textColor="#FF2B3F"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_transaction_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="#FF2B3F"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="累计消费(元)"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_transaction_xh_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/color_232323"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>