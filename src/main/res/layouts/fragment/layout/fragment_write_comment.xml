<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_actionbar_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_comment_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:drawableLeft="@mipmap/ic_comment_rule"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="9dp"
                android:text="优质点评的标准"
                android:textColor="@color/color_007aff"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/tv_comment_rule"
                android:layout_toRightOf="@id/iv_back"
                android:singleLine="true"
                android:textColor="#232323"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="先选个标签吧"
            android:textColor="@color/color_707070"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/gr_comment_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_type_comment"
                style="@style/rb_style_tab_game_comment_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:text="点评"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_type_strategy"
                style="@style/rb_style_tab_game_comment_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:text="攻略"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_type_seek_help"
                style="@style/rb_style_tab_game_comment_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="6dp"
                android:text="求助"
                android:textSize="13sp" />
        </RadioGroup>


        <LinearLayout
            android:id="@+id/ll_edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="215dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@null"
                android:gravity="left"
                android:hint="围绕游戏的画面、玩法、操作、氪金等方面发表你对该游戏的真实看法和体验！（欢迎原创哦~）"
                android:lineSpacingMultiplier="1.25"
                android:paddingTop="6dp"
                android:singleLine="false"
                android:paddingBottom="6dp"
                android:textColorHint="@color/color_d6d6d6"
                android:textSize="15sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_post_comment"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:background="@color/color_eeeeee"
            android:gravity="center"
            android:text="提交点评"
            android:textColor="@color/color_848484"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>