<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/rootView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_white_radius_10"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.zqhy.app.widget.imageview.ClipRoundImageView
                            android:id="@+id/iv_transaction_image2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_placeholder"
                            app:borderRadius="10dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_transaction_game_name"
                                    android:maxWidth="200dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/app_name"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_game_suffix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:background="@drawable/shape_f2f2f2_radius_2"
                                    android:paddingHorizontal="5dp"
                                    android:paddingVertical="3dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="@string/app_name"
                                    android:textColor="#666666"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_xh_showname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="小号:  "
                                    android:textColor="@color/color_9b9b9b"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_xh_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9aq40，"
                                    android:textColor="@color/color_9b9b9b"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_xh_reg_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="创建2153天"
                                    android:textColor="@color/color_9b9b9b"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="实付充值： "
                                    android:textColor="@color/color_9b9b9b"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_xh_pay_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#232323"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_ban_trade_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_audit_transaction_sell_9"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_radius_10"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基础信息"
                            android:textColor="#232323"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" *"
                            android:textColor="@color/color_ff2b3f"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="区服"
                                android:textColor="#232323"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/et_transaction_game_server"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:layoutDirection="rtl"
                                android:maxLength="12"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:hint="请严格按照游戏内区服信息填写"
                                android:textColor="@color/color_232323"
                                android:textColorHint="@color/color_999999"
                                android:textSize="14sp" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/iv_transaction_game_server_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:paddingRight="10dp"
                                android:src="@mipmap/ic_login_delete"/>
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_transaction_game_server_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:drawableLeft="@mipmap/ic_audit_transaction_sell_tips"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:text="系统自动读取，如有误差请自行修改"
                            android:textSize="10sp"
                            android:textColor="#333333"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="售价"
                            android:textColor="#232323"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_set_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="10dp"
                            android:gravity="right"
                            android:text="设置价格"
                            android:textColor="#9b9b9b"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_set_price_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:text="手续费5%(最低5元，售出可得0平台币)"
                        android:textSize="10sp"
                        android:textColor="#333333"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_white_radius_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="15dp"
                        android:paddingRight="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品截图"
                                android:textColor="@color/color_333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" *"
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="请上传3-9张小号游戏内最新截图（旧图可能会导致审核截图时信息不一致而不通过）"
                            android:textColor="@color/color_9b9b9b"
                            android:textColorHint="@color/color_999999"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_radius_10"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选填信息"
                            android:textColor="#232323"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_write_secondary_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="二级密码"
                                android:textColor="#232323"
                                android:textSize="16sp" />


                            <EditText
                                android:id="@+id/tv_transaction_secondary_password"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginLeft="28dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:layoutDirection="rtl"
                                android:hint="有则必填，例：仓库密码1234"
                                android:singleLine="true"
                                android:textColor="@color/color_232323"
                                android:textColorHint="@color/color_999999"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_audit_transaction_sell_tips"
                            android:drawablePadding="5dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:text="如有二级密码不提供，出售造成纠纷需自行承担"
                            android:textSize="10sp"
                            android:textColor="#333333"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_write_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品描述"
                                android:textColor="@color/color_333333"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_transaction_description"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:layoutDirection="rtl"
                                android:layout_marginLeft="16dp"
                                android:hint="可选填简单描述号的亮点"
                                android:singleLine="true"
                                android:textColor="@color/color_232323"
                                android:textColorHint="@color/color_9b9b9b"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/btn_confirm_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="75dp"
                android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
                android:paddingVertical="14dp"
                android:text="确认出售"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
