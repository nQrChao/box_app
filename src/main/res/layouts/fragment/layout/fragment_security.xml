<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include layout="@layout/layout_common_title" />

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius_2"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="用户协议"
                android:textSize="15sp"
                android:textColor="@color/color_333333"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_f2f2f2" />

            <TextView
                android:id="@+id/tv_privacy_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="隐私协议"
                android:textSize="15sp"
                android:textColor="@color/color_333333"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_f2f2f2" />

            <TextView
                android:id="@+id/tv_data_sharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="第三方信息数据共享"
                android:textSize="15sp"
                android:textColor="@color/color_333333"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_f2f2f2" />

            <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="安全投诉"
                android:textSize="15sp"
                android:textColor="@color/color_333333"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_f2f2f2" />

            <TextView
                android:id="@+id/tv_cancellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="账号注销"
                android:textSize="15sp"
                android:textColor="@color/color_333333"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/color_f2f2f2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_recommendation_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:text="个性推荐开关"
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"/>

                <com.zqhy.app.widget.SwitchView
                    android:id="@+id/switch_view"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="15dp"
                    app:isOpened="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>