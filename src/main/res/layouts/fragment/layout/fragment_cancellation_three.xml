<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_common_title" />

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="20dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="注销账号为不可恢复操作，一旦注销，你自愿承担其可能的所有结果，该结果包括但不限于如下结果："
                    android:textSize="13sp"
                    android:textColor="@color/color_777777"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:text="1、注销后，账号将无法登录、找回"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="* 账号无法登录本APP及旗下相关产品\n* 你的实名信息、手机号等绑定关系将解除\n* 账号相关资料无法找回（包括但不限于头像，用户名、发布信息、收藏信息等）"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="2、注销后，账号权益将无法找回"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="* 账号内的资产与权益（包括但不限于平台币、代金券、积分等）将视为你自愿放弃且无法继续使用。"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"/>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:drawableLeft="@drawable/selector_agreement"
            android:drawablePadding="6dp"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/color_999999"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:background="@drawable/selector_cancellation_next_text"
            android:text="下一步"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>