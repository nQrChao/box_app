<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_b2b2b2"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="96dp"
                        android:layout_height="96dp" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="96dp"
                        android:layout_height="96dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:background="@drawable/ts_shadow_game_image">

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转BrowserActivity" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_browser_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:hint="target url"
                    android:singleLine="true" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/is_h5game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否为H5游戏" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_game_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:hint="gameid"
                        android:singleLine="true" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_game_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:hint="gamename"
                        android:singleLine="true" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_jump_browser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳转" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_oaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oaid = " />


                <Button
                    android:id="@+id/btn_model_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据测试" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头条上报SDK测试" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_tt_event_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_tt_event_purchase"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="付费的金额" />

                    <Button
                        android:id="@+id/btn_tt_event_purchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付费" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腾讯上报SDK测试" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_api_activation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="激活" />


                    <Button
                        android:id="@+id/btn_api_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册" />


                    <Button
                        android:id="@+id/btn_api_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付费" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快手上报SDK测试" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_kuaishou_activation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="激活" />


                    <Button
                        android:id="@+id/btn_kuaishou_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册" />


                    <Button
                        android:id="@+id/btn_kuaishou_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付费" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汇川上报SDK测试" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_huichuan_activation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="激活" />


                    <Button
                        android:id="@+id/btn_huichuan_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册" />


                    <Button
                        android:id="@+id/btn_huichuan_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付费" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取Umeng设备信息" />

                <TextView
                    android:id="@+id/tv_umeng_device_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取设备IEMI码" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_imei_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="方法一：" />

                    <TextView
                        android:id="@+id/tv_value_imei_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_imei_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="方法二：" />

                    <TextView
                        android:id="@+id/tv_value_imei_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加日历时间" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="title" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="description" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_reminder_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="reminderTime"
                            android:inputType="datetime" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_previous_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="previousDate"
                            android:inputType="number" />
                    </TableRow>

                </TableLayout>


                <Button
                    android:id="@+id/btn_add_calendar_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="addCalendarEvent"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_delete_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <Button
                        android:id="@+id/btn_delete_calendar_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="deleteCalendarEvent"
                        android:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_get_apk_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取安装应用原生Apk"
                    android:textAllCaps="false" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_alipay_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="=======================================================" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>