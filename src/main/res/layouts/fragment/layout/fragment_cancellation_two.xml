<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_common_title" />

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:lineSpacingMultiplier="1.2"
            android:text="请输入密码验证身份"
            android:textSize="13sp"
            android:textColor="@color/color_777777"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:background="@drawable/ts_shape_f2f2f2_10_radius"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:textColorHint="@color/color_999999"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_send_code"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="6dp"
                android:gravity="center"
                android:background="@drawable/ts_shape_4e76ff_big_radius"
                android:text="发送验证码"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ts_shape_gradient_big_radius_55a8fe_4e77fe"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

</LinearLayout>