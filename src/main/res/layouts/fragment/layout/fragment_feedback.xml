<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:tag="FANKUI_TITLE"
        android:id="@+id/titleBar_Layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/item_title_layout" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="62dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:visibility="visible" />

        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择问题类型"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/rg_feedback"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_feedback_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="APP建议" />


                <RadioButton
                    android:id="@+id/rb_feedback_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="APP故障" />

                <RadioButton
                    android:id="@+id/rb_feedback_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="游戏相关" />

                <RadioButton
                    android:id="@+id/rb_feedback_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="投诉举报" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_white_radius"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_user_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:singleLine="false"
                    android:hint="请选择问题类型"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_how_to_suggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:drawableLeft="@mipmap/ic_question_blue"
                    android:drawablePadding="6dp"
                    android:padding="8dp"
                    android:text="如何建议"
                    android:textColor="@color/color_007aff"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_input_qq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="6dp"
                android:background="@drawable/shape_white_radius"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_ff0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系QQ:"
                    android:textColor="@color/color_333333" />

                <EditText
                    android:id="@+id/tv_input_qq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="能更快为您解决问题哦！"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp">


            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_app_opinion_flower"
                android:drawablePadding="12dp"
                android:text="@string/string_app_opinion"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />


        </FrameLayout>
    </LinearLayout>
</LinearLayout>