<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f2f2f2"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_rootview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f2f2f2"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <ImageView
                        android:id="@+id/iv_game_top_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_game_top_bg">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/bg_f9fcff_e4efff_20_radius"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="20dp">

                            <ImageView
                                android:id="@+id/iv_game_top_banner_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@mipmap/ic_placeholder"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_game_top_banner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/color_171717"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/iv_game_top_banner_image"
                                app:layout_constraintTop_toTopOf="@+id/iv_game_top_banner_image"
                                tools:text="星魂之上删测" />

                            <TextView
                                android:id="@+id/tv_game_top_banner_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@+id/tv_game_top_banner_name"
                                app:layout_constraintTop_toBottomOf="@+id/tv_game_top_banner_name"
                                tools:text="回合 武侠·格调1服" />

                            <TextView
                                android:id="@+id/tv_game_top_banner_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_ffffff_stroke_4e76ff"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:textColor="@color/color_4e76ff"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@+id/tv_game_top_banner_name"
                                app:layout_constraintTop_toBottomOf="@+id/tv_game_top_banner_hint"
                                tools:text="天天送6480" />

                            <TextView
                                android:id="@+id/tv_game_top_banner_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_game_top_banner_label"
                                app:layout_constraintStart_toEndOf="@+id/tv_game_top_banner_label"
                                app:layout_constraintTop_toTopOf="@+id/tv_game_top_banner_label"
                                tools:text="累计消费（元）5202.00" />


                            <TextView
                                android:id="@+id/tv_game_top_banner_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/color_FF2D3F"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/iv_game_top_banner_image"
                                tools:text="520" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="￥"
                                android:textColor="@color/color_FF2D3F"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_game_top_banner_price"
                                app:layout_constraintEnd_toStartOf="@+id/tv_game_top_banner_price" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/bg_f9fcff_e4efff_20_radius"
                            android:paddingHorizontal="15dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="30dp">

                            <View
                                android:id="@+id/game_top_tab_bg1"
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginTop="32dp"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/bg_ffffff_10_radius"
                                app:layout_constraintEnd_toStartOf="@+id/game_top_tab_bg2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/iv_game_top_tab_img1" />

                            <View
                                android:id="@+id/game_top_tab_bg2"
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="32dp"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/bg_ffffff_10_radius"
                                app:layout_constraintEnd_toStartOf="@+id/game_top_tab_bg3"
                                app:layout_constraintStart_toEndOf="@+id/game_top_tab_bg1"
                                app:layout_constraintTop_toTopOf="@+id/iv_game_top_tab_img1" />

                            <View
                                android:id="@+id/game_top_tab_bg3"
                                android:layout_width="0dp"
                                android:layout_height="105dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="32dp"
                                android:background="@drawable/bg_ffffff_10_radius"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/game_top_tab_bg2"
                                app:layout_constraintTop_toTopOf="@+id/iv_game_top_tab_img1" />


                            <ImageView
                                android:id="@+id/iv_game_top_tab_img1"
                                android:layout_width="84dp"
                                android:layout_height="84dp"
                                android:src="@drawable/iv_game_top_tab_img1"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg1"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_game_top_tab_img2"
                                android:layout_width="84dp"
                                android:layout_height="84dp"
                                android:src="@drawable/iv_game_top_tab_img2"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg2"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg2"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_game_top_tab_img3"
                                android:layout_width="84dp"
                                android:layout_height="84dp"
                                android:src="@drawable/iv_game_top_tab_img3"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg3"
                                app:layout_constraintHorizontal_weight="1"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg3"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tv_game_top_tab_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游交易"
                                android:textColor="@color/color_232323"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg1"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg1"
                                app:layout_constraintTop_toBottomOf="@+id/iv_game_top_tab_img1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="海量商品"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg1"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg1"
                                app:layout_constraintTop_toBottomOf="@+id/tv_game_top_tab_name1" />

                            <TextView
                                android:id="@+id/tv_game_top_tab_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="讯乐园"
                                android:textColor="@color/color_232323"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg2"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg2"
                                app:layout_constraintTop_toBottomOf="@+id/iv_game_top_tab_img2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更多资讯"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg2"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_game_top_tab_name2" />

                            <TextView
                                android:id="@+id/tv_game_top_tab_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="热聊吧"
                                android:textColor="@color/color_232323"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg3"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg3"
                                app:layout_constraintTop_toBottomOf="@+id/iv_game_top_tab_img3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="论坛互动"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="@+id/game_top_tab_bg3"
                                app:layout_constraintStart_toStartOf="@+id/game_top_tab_bg3"
                                app:layout_constraintTop_toBottomOf="@+id/tv_game_top_tab_name3" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_ffffff_10_radius" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ffffff_10_radius" />


            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>
