<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_logo_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/shape_white_radius_stroke_1c000000" />

                <ImageView
                    android:id="@+id/iv_login_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_launcher" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_login_splash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_logo_bg"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_login_splash2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_big_radius_f5f5f5"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入小字母开头6-18位账号"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="#9B9B9B"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_account_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_login_delete"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_big_radius_f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_account_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="设置6-18位登录密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColorHint="#9B9B9B"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_password_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_login_delete"/>

                <CheckBox
                    android:id="@+id/cb_password_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/selector_password_visible"
                    android:button="@null"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_big_radius_f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_account_password_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="#9B9B9B"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_repassword_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_login_delete"/>

                <CheckBox
                    android:id="@+id/cb_password_visible_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/selector_password_visible"
                    android:button="@null"
                    android:visibility="visible" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="58dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                android:text="立即注册"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_agree"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_login_un_check"/>

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我已阅读并同意用户协议、隐私协议接受免除或者限制责任、诉讼管辖约定等粗体标示条款"
                android:textSize="12sp"
                android:textColor="#232323"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>