<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_actionbar_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="举报有奖"
                android:textColor="#232323"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:text="我的举报"
                android:textColor="#4E76FF"
                android:textSize="14sp"/>

        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/shape_white_radius_10"
                android:layout_marginTop="10dp"
                android:paddingVertical="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                android:drawableLeft="@mipmap/ic_game_report_top_tips"
                android:drawablePadding="12dp"
                android:lineSpacingMultiplier="1.2"
                android:text="谨防游戏内以充值折扣为诱饵进行的骗局。平台在此提示，切勿相信第三方折扣，注意保护自身财产安全！如因轻信出现被骗，与平台无关。"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_radius_10"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="游戏名称"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="萌幻西游(0氪送5万充)"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="我的账号"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:id="@+id/tv_user_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:lines="1"
                        android:ellipsize="end"
                        tools:text="fffff2222"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="折扣平台"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=" *"
                        android:textSize="16sp"
                        android:textColor="#FF2B3F"/>

                    <EditText
                        android:id="@+id/et_platform"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:hint="请填写折扣平台名称"
                        android:textColorHint="#9B9B9B"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="下载链接"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:layout_marginLeft="35dp"
                        android:gravity="right"
                        android:maxLength="500"
                        android:maxLines="2"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:hint="请输入折扣平台下载链接"
                        android:textColorHint="#9B9B9B"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="充值折扣"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <EditText
                        android:id="@+id/et_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:layout_marginLeft="35dp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:hint="请输入充值折扣"
                        android:textColorHint="#9B9B9B"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="联系方式 "
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=" *"
                        android:textSize="16sp"
                        android:textColor="#FF2B3F"/>

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:lines="1"
                        android:ellipsize="end"
                        android:background="@null"
                        android:inputType="number"
                        android:hint="请提供您的手机号"
                        android:textColorHint="#9B9B9B"
                        android:textSize="14sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="传证据截图"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:text="例如：微信/QQ/游戏内聊天截图"
                    android:textSize="14sp"
                    android:textColor="#9B9B9B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="强烈建议提供明确的证据截图信息协助官方核实，核实为真将积极为您申请补偿奖励"
                    android:textSize="12sp"
                    android:textColor="#FC851F"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="75dp"
                android:layout_marginTop="30dp"
                android:paddingVertical="15dp"
                android:gravity="center"
                android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                android:text="提交"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:lineSpacingMultiplier="1.2"
                android:text="我们收到反馈后将第一时间核实或与您联系，请保持联系方式的畅通"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>