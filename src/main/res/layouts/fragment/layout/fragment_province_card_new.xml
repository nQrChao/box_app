<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/ic_province_card_top_bg_logined"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@mipmap/ic_actionbar_back_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="省钱福利"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_instructions_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="咨询客服"
                android:textSize="14sp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="22dp"
            android:background="@mipmap/ic_province_card_top_card_bg">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/ic_user_login_new"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/iv_icon"
                app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
                app:layout_constraintLeft_toRightOf="@+id/iv_icon"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="立即登录"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/iv_icon"
                app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开通记录"
                    android:textColor="#8094FC"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#8094FC"/>

                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省钱卡说明"
                    android:textSize="14sp"
                    android:textColor="#8094FC"/>

                <View
                    android:visibility="gone"
                    android:id="@+id/view_coupon_line"
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#7E7E7E"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的代金券"
                    android:textSize="14sp"
                    android:textColor="#7E7E7E"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="开通即回本，每日再领5¥"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"/>

                <LinearLayout
                    android:id="@+id/ll_tips"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_welfare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="每日领 5 福利币"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_welfare_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="2024.03.31 到期"
                        android:textSize="13sp"
                        android:textColor="#8A7FFF"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_open"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@mipmap/ic_province_card_top_card_button_2"
                    android:gravity="center_horizontal"
                    android:paddingTop="7dp"
                    android:textStyle="bold"
                    android:text="立即开通"
                    android:textSize="17sp"
                    android:textColor="#7D4719"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:visibility="gone"
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="25dp"
                android:clipChildren="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_province_card_tips_left_1"/>

                    <TextView
                        android:id="@+id/tv_tips_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:text="虚拟商品开通后概不退换，请开通前查询是否支持您的游戏"
                        android:textSize="12sp"
                        android:textColor="#FF5151" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_tips_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:background="#FAFAFA"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_province_card_tips_left_2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:text="限时福利："
                        android:textSize="12sp"
                        android:textColor="#8054FE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="福利币兑换本代金券"
                        android:textSize="12sp"
                        android:textColor="#8054FE" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/ic_province_card_tips_right_2"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_province_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_province_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="省钱卡"
                            android:textSize="18sp"
                            android:textColor="#4E76FF"/>

                        <TextView
                            android:id="@+id/tv_province_card_tips"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ts_shape_4e76ff_big_radius"
                            android:gravity="center"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:text="立返100%"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_discount_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_discount_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="特惠卡"
                            android:textSize="18sp"
                            android:textColor="#232323"/>

                        <TextView
                            android:id="@+id/tv_discount_card_tips"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ts_shape_f2f2f2_big_radius"
                            android:gravity="center"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:text="0.1折扣游戏专用"
                            android:textSize="10sp"
                            android:textColor="#232323"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_pay_alipay"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_white_radius_with_line_f2f2f2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/ic_vip_member_pay_alipay_new"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="支付宝支付"
                            android:textSize="14sp"
                            android:textColor="#363636"/>

                        <ImageView
                            android:id="@+id/iv_pay_alipay"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_vip_member_pay_check" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pay_wechat"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/shape_white_radius_with_line_f2f2f2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/ic_vip_member_pay_wechat_new"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="微信支付"
                            android:textSize="14sp"
                            android:textColor="#363636"/>

                        <ImageView
                            android:id="@+id/iv_pay_wechat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_vip_member_pay_uncheck" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:indicator_drawable_selected="@drawable/main_banner_indicator_selected"
                        app:indicator_drawable_unselected="@drawable/main_banner_indicator_unselected" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/shape_white_10_radius_with_line_f2f2f2">

                    <TextView
                        android:id="@+id/tv_game_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="点击“更多”查询福利币支持游戏"
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingTop="5dp"
                            android:id="@+id/recycler_view_recommend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_game_more"
                            android:layout_width="30dp"
                            android:layout_height="90dp"
                            android:gravity="center"
                            android:background="@mipmap/ic_province_card_game_tips_right_bg"
                            android:text="更\n多\n游\n戏"
                            android:textSize="13sp"
                            android:textColor="#245578"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
