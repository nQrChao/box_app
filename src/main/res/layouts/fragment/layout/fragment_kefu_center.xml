<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_status_bar" />

    <LinearLayout
        android:id="@+id/titleBar_Layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="KEFU_TITLE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftIcon"
                android:layout_width="@dimen/idp_40"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/idp_10"
                android:src="@drawable/arrows_left_b_ic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/leftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="客服"
                android:textColor="@color/color_232323"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/string_dyx_kefu"
                android:textColor="@color/color_888888"
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="14dp"
                android:src="@mipmap/ic_close_page_black"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

