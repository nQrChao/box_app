<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="14dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="游戏名"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/color_878787"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="充值小号"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_xh_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/color_878787"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="充值时间"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_recharge_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="充值金额"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/et_recharge_amount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/iv_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_close_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:text="元"
                            android:textColor="@color/color_818181"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_max_amount"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可申请金额："
                            android:textColor="@color/color_3478f6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_max_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/color_ff0000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="元"
                            android:textColor="@color/color_3478f6"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/color_eeeeee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/shape_yellow_radius" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请准确填写以下信息"
                                android:textColor="@color/color_333333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="*错误信息会导致返利发放失败"
                                android:textColor="@color/color_ff0000"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_graphic_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape_yellow_big_radius"
                            android:gravity="center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/ic_pic"
                                android:drawablePadding="6dp"
                                android:gravity="center"
                                android:text="图文教学"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="游戏区服"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/et_game_server"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="必须填写正确区服信息"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_history"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="历史记录"
                            android:textColor="@color/color_3478f6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="角色名"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/et_game_role_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="必须和游戏内角色名完全一致"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_role_id"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_game_role_id"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="角色ID"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/et_game_role_id"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="必须和游戏内角色名完全一致"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_game_reward"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="道具奖励"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_game_reward"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="有则必填，不填则视为放弃该奖励"
                            android:singleLine="true"
                            android:textColor="@color/color_818181"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/iv_choose_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:src="@mipmap/ic_arrow_right"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_extents_info"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="备注"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />


                        <EditText
                            android:id="@+id/et_extents_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="选填，50字内"
                            android:lineSpacingMultiplier="1.25"
                            android:maxLength="50"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/color_818181"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_yellow_radius"
                    android:text="确认信息无误，提交申请"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_accepting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="accepting"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="complete"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_failure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="failure"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_revocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="revocation"
                android:textAllCaps="false" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
