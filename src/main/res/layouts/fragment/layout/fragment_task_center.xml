<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#FF000000"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f2f2f2">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_task_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/img_task_header_bg_new" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/layout_status_bar" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_back"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:padding="15dp"
                                    android:src="@mipmap/ic_back_white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:paddingVertical="12dp"
                                    android:text="福利中心"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_integral_detail"
                                    android:layout_width="72dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/shape_white_radius_line"
                                    android:gravity="center"
                                    android:text="积分明细"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/ll_integral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="25dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="积分："
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_integral_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="0"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_login_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_marginHorizontal="20dp"
                                android:textStyle="bold"
                                android:text="请点击登录/注册"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp"
                                android:lineSpacingMultiplier="1.25"
                                android:text="积分前往积分商城兑换好礼哦~"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="30dp"/>
                        </LinearLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:id="@+id/iv_task_sign_in_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:drawableRight="@mipmap/ic_task_sign_tips"
                            android:drawablePadding="10dp"
                            android:text="每日签到"
                            android:textColor="#82512E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_task_sign_tips_bg"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white_radius_2"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_sign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginVertical="20dp"
                            android:layout_marginHorizontal="20dp">

                            <LinearLayout
                                android:id="@+id/ll_vip_sign"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@mipmap/ic_task_vip_sign_new"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/ic_vip_open_new"
                                    android:drawablePadding="3dp"
                                    android:gravity="center"
                                    android:text="会员豪华签到"
                                    android:textSize="15sp"
                                    android:textColor="#FFFFFF"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_sign_in"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/ts_shape_ffa530_big_radius"
                                android:gravity="center"
                                android:text="每日签到"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"/>

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white_radius_2"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="125dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="12dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="12dp">

                                    <ImageView
                                        android:id="@+id/iv_sign_page_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/ic_sign_in_left" />

                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/mViewPager"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:id="@+id/iv_sign_page_right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/ic_sign_in_right" />
                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/fl_sign_in_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ll_1"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="12dp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/iv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="34dp"
                                android:src="@mipmap/ic_task_sign_in_redpacket" />

                            <TextView
                                android:id="@+id/tv_sign_in_integral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="12dp"
                                android:background="@mipmap/ic_task_sign_in_integral"
                                android:gravity="center"
                                android:text="明日+20"
                                android:textColor="@color/white"
                                android:textSize="8sp" />
                        </FrameLayout>

                        <RelativeLayout
                            android:id="@+id/rl_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ll_1"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="-12dp">


                            <!--<TextView
                                android:id="@+id/tv_sign_in"
                                android:layout_width="72dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/ts_shape_gradient_ff9900_ff4e00"
                                android:gravity="center"
                                android:text="每日签到"
                                android:textColor="@color/white"
                                android:textSize="12sp" />-->
                        </RelativeLayout>


                    </RelativeLayout>

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="10dp"
                        app:image_scale_type="center_crop"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_couple"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_try_game"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/ts_shape_10_radius_a153ff_4b9bf8"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="试玩有奖"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingMultiplier="1.25"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="10dp"
                                android:text="试玩推荐游戏，获得海量积分奖励"
                                android:textSize="13sp"
                                android:textColor="#FBF5FF"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_white_radius_2"
                                    android:layout_marginHorizontal="11dp"
                                    android:layout_alignParentBottom="true"
                                    android:paddingVertical="16dp"
                                    android:paddingRight="14dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="赠送积分"
                                            android:textSize="10sp"
                                            android:textColor="#232323"/>

                                        <TextView
                                            android:id="@+id/tv_try_integral"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:textStyle="bold"
                                            android:text="163.3w"
                                            android:textSize="14sp"
                                            android:textColor="#FF2D3F"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/ic_task_try_new"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_daily_task"
                                android:layout_width="match_parent"
                                android:layout_height="94dp"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:background="@drawable/shape_white_radius_2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:gravity="center_vertical"
                                        android:drawableLeft="@mipmap/ic_task_mission_new"
                                        android:drawablePadding="5dp"
                                        android:textStyle="bold"
                                        android:text="每日任务"
                                        android:textSize="18sp"
                                        android:textColor="#232323"/>

                                    <TextView
                                        android:id="@+id/tv_day_task_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ts_shape_gradient_f8482c_fd3d63"
                                        android:paddingHorizontal="4dp"
                                        android:paddingVertical="2dp"
                                        android:text="待领"
                                        android:textSize="10sp"
                                        android:textColor="#FFFFFF"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingMultiplier="1.25"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_marginTop="7dp"
                                    android:text="超多积分等您领取"
                                    android:textSize="12sp"
                                    android:textColor="#4E4E4E"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_review"
                                android:layout_width="match_parent"
                                android:layout_height="94dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/shape_white_radius_2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:drawableLeft="@mipmap/ic_task_review_new"
                                    android:drawableRight="@mipmap/ic_task_item_right_arrow_new"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="点评活动"
                                    android:textSize="18sp"
                                    android:textColor="#232323"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingMultiplier="1.25"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_marginTop="7dp"
                                    android:text="单日最高领500积分"
                                    android:textSize="12sp"
                                    android:textColor="#4E4E4E"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_province"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:background="@drawable/ts_shape_10_radius_fa814c_f8b147"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="省钱卡福利"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingMultiplier="1.25"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="10dp"
                                android:text="平台专属福利，300%超值省"
                                android:textSize="13sp"
                                android:textColor="#FBF5FF"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_white_radius_2"
                                    android:layout_marginHorizontal="11dp"
                                    android:layout_alignParentBottom="true"
                                    android:paddingVertical="16dp"
                                    android:paddingRight="14dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical|right"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="近期送出(元)"
                                            android:textSize="10sp"
                                            android:textColor="#232323"/>

                                        <TextView
                                            android:id="@+id/tv_province_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:textStyle="bold"
                                            android:text="32w"
                                            android:textSize="14sp"
                                            android:textColor="#FF2D3F"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/ic_task_preferential_new"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_prefecture"
                                android:layout_width="match_parent"
                                android:layout_height="94dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/shape_white_radius_2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_prefecture"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/ic_task_preferential_new"/>

                                    <TextView
                                        android:id="@+id/tv_prefecture"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5dp"
                                        android:drawableRight="@mipmap/ic_task_item_right_arrow_new"
                                        android:drawablePadding="5dp"
                                        android:gravity="center_vertical"
                                        android:text="648专区"
                                        android:textSize="18sp"
                                        android:textColor="#232323"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_prefecture_tips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingMultiplier="1.25"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_marginTop="7dp"
                                    android:text="送648真充，先领先得"
                                    android:textSize="12sp"
                                    android:textColor="#4E4E4E"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_large_coupon"
                                android:layout_width="match_parent"
                                android:layout_height="94dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/shape_white_radius_2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_large_coupon"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/ic_task_preferential_new"/>

                                    <TextView
                                        android:id="@+id/tv_large_coupon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5dp"
                                        android:drawableRight="@mipmap/ic_task_item_right_arrow_new"
                                        android:drawablePadding="5dp"
                                        android:gravity="center_vertical"
                                        android:text="0元领券区"
                                        android:textSize="18sp"
                                        android:textColor="#232323"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_large_coupon_tips"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingMultiplier="1.25"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_marginTop="7dp"
                                    android:text="无门槛券，大额券来了~"
                                    android:textSize="12sp"
                                    android:textColor="#4E4E4E"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_integral_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:paddingHorizontal="26dp"
                        android:text="如果你愿意对平台福利体系的完善提出宝贵建议，请联系平台福利策划亲哦~立即联系 >"
                        android:textColor="@color/color_7a7a7a"
                        android:textSize="12sp" />
                </LinearLayout>

            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>
</LinearLayout>