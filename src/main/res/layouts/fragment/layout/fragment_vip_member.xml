<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_common_title" />


    <RelativeLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/img_vip_member_month_card" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/profile_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="16dp"
                            android:src="@mipmap/ic_user_login" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/profile_image"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_user_vip_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_user_name"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/profile_image"
                            android:text="您暂未开通月卡"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <com.zqhy.app.widget.GradientColorTextView
                        android:id="@+id/tv_app_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="68dp"
                        android:text="巴兔月卡"
                        android:textSize="65sp"
                        android:textStyle="bold"
                        app:color_orientation="vertical"
                        app:endColor="#FFE9B2"
                        app:startColor="#FAF5DC"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/shape_white_radius"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_center_title_label" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="月卡权益"
                                android:textColor="@color/color_232323"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_center_title_label" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_vip_member_item_1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/iv_1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6元代金券天天送（限BT）"
                                    android:textColor="@color/color_232323"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="自开卡日起，每天送1张代金券（有效期1天）"
                                    android:textColor="@color/color_b5b5b5"
                                    android:textSize="11sp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/btn_get_vip_vouchers"
                                android:layout_width="50dp"
                                android:layout_height="22dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ts_shape_big_radius_1d1302"
                                android:gravity="center"
                                android:text="领取"
                                android:textColor="@color/color_f2e2c1"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/color_f2f2f2" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="24dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_vip_member_item_2" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_2"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="支持大部分游戏"
                                    android:textColor="@color/color_232323"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="个人中心和点评处的头像，显示VIP认证图标"
                                    android:textColor="@color/color_b5b5b5"
                                    android:textSize="11sp"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/shape_white_radius"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="8dp"
                                android:text="开通月卡"
                                android:textColor="@color/color_232323"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_vip_member_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="14dp"
                                android:layout_marginBottom="8dp"
                                android:text="已有0人开通"
                                android:textColor="@color/color_9b9b9b"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/flex_vip_member_type_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginBottom="6dp"
                            app:alignContent="flex_start"
                            app:alignItems="center"
                            app:flexDirection="row"
                            app:flexWrap="wrap"
                            app:justifyContent="flex_start"
                            app:showDivider="beginning|middle">

                        </com.google.android.flexbox.FlexboxLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="72dp"
                        android:background="@drawable/shape_white_radius"
                        android:orientation="vertical"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_center_title_label" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="代金券说明"
                                android:textColor="@color/color_232323"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_center_title_label" />

                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Q：无门槛代金券获取方式、时间、期限是什么？"
                            android:textColor="@color/color_232323"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingMultiplier="1.25"
                            android:text="A：购买成功后，在当前页领取按钮处领取，次日0点重置可继续领取，每张代金券有效期为1天。"
                            android:textColor="@color/color_6a6a6a"
                            android:textSize="13sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Q：买了会员后会发放多久的代金券？"
                            android:textColor="@color/color_232323"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingMultiplier="1.25"
                            android:text="A：根据购买时选择的天数加上赠送的天数，从购买当天开始计算。"
                            android:textColor="@color/color_6a6a6a"
                            android:textSize="13sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Q：代金券适用的游戏是？"
                            android:textColor="@color/color_232323"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingMultiplier="1.25"
                            android:text="A：本平台绝大多数通用，具体以游戏内为准 。"
                            android:textColor="@color/color_6a6a6a"
                            android:textSize="13sp" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_app_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="6dp"
                            android:text="@string/string_dyx_vip_liability"
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btn_confirm_pay_vip_member"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/ts_shape_vip_member_button"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </RelativeLayout>

</LinearLayout>