<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:id="@+id/rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_actionbar_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#232323"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="规则"
                android:textColor="#4E76FF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/list_margin_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/title_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7FA">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lin_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lin_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/shape_fff1e9_big_radius_line"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="17dp"
                            android:paddingVertical="6dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_fragment_easy_to_play_1" />

                            <TextView
                                android:id="@+id/tv_top_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textSize="13sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/con_game_det"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/shape_white_top_radius_10"
                            android:paddingStart="15dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginVertical="15dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_placeholder"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearance="@style/RoundedStyle10"
                                app:strokeColor="@color/transparent" />

                            <TextView
                                android:id="@+id/tv_game_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="2dp"
                                android:textColor="#232323"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/gl_center"
                                app:layout_constraintLeft_toRightOf="@+id/iv_icon"
                                tools:text="游戏" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/gl_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintGuide_percent="0.5" />

                            <TextView
                                android:id="@+id/tv_game_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="2dp"
                                android:textColor="#4E76FF"
                                android:textSize="14sp"
                                app:layout_constraintLeft_toRightOf="@+id/iv_icon"
                                app:layout_constraintTop_toBottomOf="@+id/gl_center"
                                tools:text="游戏标题" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginEnd="15dp"
                                android:background="#EFEFEF"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/lin_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/con_det"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape_white_bottom_10_radius"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/tv_czmx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="充值明细"
                                    android:textColor="#232323"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_czmx_tip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="（不包括代金券，福利币等优惠）"
                                    android:textColor="#9B9B9B"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_czmx"
                                    app:layout_constraintLeft_toRightOf="@id/tv_czmx"
                                    app:layout_constraintTop_toTopOf="@+id/tv_czmx" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/lin_acc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_czmx">

                                </androidx.appcompat.widget.LinearLayoutCompat>


                                <TextView
                                    android:id="@+id/tv_czze"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="充值总额"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/lin_acc" />

                                <TextView
                                    android:id="@+id/tv_czze_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:textColor="#232323"
                                    android:textSize="14sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/lin_acc"
                                    tools:text="1.50" />

                                <TextView
                                    android:id="@+id/tv_thbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="退还比例"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_czze" />

                                <TextView
                                    android:id="@+id/tv_thbl_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:textColor="#232323"
                                    android:textSize="14sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_czze"
                                    tools:text="50%" />


                                <View
                                    android:id="@+id/line_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="#EFEFEF"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_thbl" />

                                <TextView
                                    android:id="@+id/tv_ktflb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="可退福利币"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/line_value" />

                                <TextView
                                    android:id="@+id/tv_ktflb_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FF0000"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_ktflb"

                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tv_ktflb"
                                    tools:text="0.75" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/con_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/shape_white_radius_10"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="20dp">

                                <TextView
                                    android:id="@+id/tv_sbczsj"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="首笔充值时间"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_sbczsj_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#818181"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_sbczsj"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tv_sbczsj"
                                    tools:text="2024/06/25 12:13" />

                                <TextView
                                    android:id="@+id/tv_sqjzsj"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="18dp"
                                    android:text="申请截至时间"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_sbczsj" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_sqjzsj"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tv_sqjzsj">

                                    <TextView
                                        android:id="@+id/tv_sqjzsj1_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:textColor="#B5B5B5"
                                        android:textSize="11sp"
                                        android:visibility="gone"
                                        app:layout_constraintBottom_toBottomOf="@id/tv_sqjzsj"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/tv_sqjzsj"
                                        tools:text="2024/06/25 14:13" />

                                    <TextView
                                        android:id="@+id/tv_sqjzsj_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#818181"
                                        android:textSize="14sp"
                                        app:layout_constraintBottom_toBottomOf="@id/tv_sqjzsj"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/tv_sqjzsj"
                                        tools:text="2024/06/25 14:13" />
                                </androidx.appcompat.widget.LinearLayoutCompat>


                                <TextView
                                    android:id="@+id/tv_xhhs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="18dp"
                                    android:text="小号收回"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_sqjzsj" />

                                <TextView
                                    android:id="@+id/tv_xhhs_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="您有充值的小号将被收回"
                                    android:textColor="#3A3A3A"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_xhhs"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/tv_xhhs" />


                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_valueless"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/shape_white_bottom_10_radius"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/tv_valueless_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="首笔充值时间"
                                    android:textColor="#232323"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_valueless_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="申请截止时间"
                                    android:textColor="#232323"
                                    android:textSize="14sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_valueless_1" />

                                <TextView
                                    android:id="@+id/tv_valueless_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="暂无充值"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_valueless_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="首充后2小时内"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_valueless_1" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="20dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="66dp"
                                    android:layout_height="1dp"
                                    android:background="#D8D8D8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="20dp"
                                    android:text="温馨提示"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="66dp"
                                    android:layout_height="1dp"
                                    android:background="#D8D8D8" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:id="@+id/tv_valueless_explain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="15dp"
                                android:text="您还有1次退还机会未使用，充值后，游戏体验不满意可按要求申请退还"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                android:background="@drawable/shape_white_radius_10"
                                android:orientation="vertical"
                                android:paddingVertical="12dp"
                                android:paddingStart="15dp">

                                <TextView
                                    android:id="@+id/tv_valueless_explain_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    tools:text="1. 游戏首笔充值后2小时内可申请" />

                                <TextView
                                    android:id="@+id/tv_valueless_explain_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14sp"
                                    tools:text="2. 收回小号，退还2小时内总充值福利币*50%" />

                                <TextView
                                    android:id="@+id/tv_valueless_explain_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14sp"
                                    tools:text="3. 退还至平台币，最高可退500福利币" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_is_refund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_white_radius_10"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_fragment_easy_to_play_2" />

                            <TextView
                                android:id="@+id/tv_ktflb_num_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="#FF0000"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                tools:text="0.75" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="退还成功"
                                android:textColor="#3A3A3A"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="已退还至账号福利币余额"
                                android:textColor="#818181"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_sqjzsj_num_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#818181"
                                android:textSize="14sp"
                                tools:text="2024/06/25 14:13" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="66dp"
                                android:layout_height="1dp"
                                android:background="#D8D8D8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:text="退还信息"
                                android:textColor="#9B9B9B"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="66dp"
                                android:layout_height="1dp"
                                android:background="#D8D8D8" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"

                            android:background="@drawable/shape_white_top_radius_10"
                            android:paddingStart="15dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_icon_r"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginVertical="15dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_placeholder"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearance="@style/RoundedStyle10"
                                app:strokeColor="@color/transparent" />

                            <TextView
                                android:id="@+id/tv_game_name_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="2dp"
