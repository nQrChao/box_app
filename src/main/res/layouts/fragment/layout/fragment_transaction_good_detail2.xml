<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_rootview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f2f2f2"
                    android:orientation="vertical"
                    android:paddingBottom="80dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:id="@+id/iv_game_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="30dp"
                            android:src="@mipmap/ic_placeholder"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_can_bargain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="23dp"
                            android:layout_marginEnd="8dp"
                            android:text="※ 支持还价"
                            android:textColor="@color/color_6972FF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/color_232323"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_game_image"
                            tools:text="宠物星球(送GM无限充）" />


                        <LinearLayout
                            android:id="@+id/ll_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_game_name">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_audit_transaction_good_detail_6_new"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:paddingVertical="4dp"
                                android:text="官方已审"
                                android:textColor="@color/color_9b9b9b"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="14dp"
                                android:drawableLeft="@drawable/ic_audit_transaction_good_detail_6_new"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:paddingVertical="4dp"
                                android:text="秒买秒到"
                                android:textColor="@color/color_9b9b9b"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_audit_transaction_good_detail_6_new"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:paddingVertical="4dp"
                                android:text="安全交易"
                                android:textColor="@color/color_9b9b9b"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ll_1">

                            <TextView
                                android:id="@+id/tv_game_suffix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxWidth="150dp"
                                android:maxLines="1"
                                android:textColor="@color/color_6972FF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="0.05折免费版" />

                            <TextView
                                android:id="@+id/tv_play_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/color_202020"
                                android:textSize="12sp"
                                tools:text="6521人在玩" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="22dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_fffbfb_stroke_ffc8cd"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ll_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="当前售价："
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="¥"
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_good_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="6dp"
                                android:text="5"
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_ec18f8_6972ff_radius_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:text="商品信息"
                            android:textColor="@color/color_232323"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:paddingStart="15dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="30dp">

                        <TextView
                            android:id="@+id/tv_genre_str_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游戏类型："
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_genre_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/tv_genre_str_hint"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="回合仙侠" />

                        <TextView
                            android:id="@+id/tv_xh_account_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="小号ID："
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_genre_str_hint" />

                        <TextView
                            android:id="@+id/tv_xh_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/tv_genre_str"
                            app:layout_constraintTop_toTopOf="@+id/tv_xh_account_hint"
                            tools:text="小号123456" />

                        <TextView
                            android:id="@+id/tv_server_name_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="游戏区服："
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_xh_account_hint" />

                        <TextView
                            android:id="@+id/tv_server_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/tv_genre_str"
                            app:layout_constraintTop_toTopOf="@+id/tv_server_name_hint"
                            tools:text="24逍遥" />

                        <TextView
                            android:id="@+id/tv_trading_or_traded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="上架时间："
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_server_name_hint" />

                        <TextView
                            android:id="@+id/tv_online_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/tv_genre_str"
                            app:layout_constraintTop_toTopOf="@+id/tv_trading_or_traded"
                            tools:text="24逍遥" />

                        <TextView
                            android:id="@+id/tv_pay_game_total_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="累计消费："
                            android:textColor="@color/color_9b9b9b"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_trading_or_traded" />

                        <TextView
                            android:id="@+id/tv_pay_game_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/tv_genre_str"
                            app:layout_constraintTop_toTopOf="@+id/tv_pay_game_total_hint"
                            tools:text="24逍遥" />

                        <ImageView
                            android:id="@+id/iv_pay_game_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_audit_transaction_good_detail_5"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_pay_game_total"
                            app:layout_constraintStart_toEndOf="@+id/tv_pay_game_total"
                            app:layout_constraintTop_toTopOf="@+id/tv_pay_game_total" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_ec18f8_6972ff_radius_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:text="角色信息"
                            android:textColor="@color/color_232323"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（描述仅供参考，以截图为准）"
                            android:textColor="@color/color_202020"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="20dp">


                        <TextView
                            android:id="@+id/tv_good_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.25"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_good_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:lineSpacingMultiplier="1.25"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_secondary_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="二级密码："
                                android:textColor="@color/color_ff0000"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_secondary_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="购买后查看"
                                android:textColor="@color/color_ff0000"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_good_screenshot_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView_iv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_ec18f8_6972ff_radius_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:text="交易提示"
                            android:textColor="@color/color_232323"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="1、国家法律规定，未成年人不能参与虚拟商品交易"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="2、账号真实情况请以截图信息为准，描述仅供参考。其中若因时间因素造成的排行、称号、装备到期等变化，不视为信息失实"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="3、购买前请先下载游戏尝试是否能正常进入游戏，若无法进入不支持购买"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="4、不支持购买后直接回收。购买后再次充值的金额可以进行回收"
                            android:textColor="@color/color_202020"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_related_good_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="15dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/bg_ec18f8_6972ff_radius_4" />

                                <TextView
                                    android:id="@+id/tv_game_name_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="该游戏的其他小号"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_tv_game_name_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_232323"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_more_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="更多"
                                    android:textColor="@color/color_999999"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@mipmap/ic_arrow_right" />
                            </LinearLayout>
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/more_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_f2f2f2" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <FrameLayout
            android:id="@+id/fl_good_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:paddingEnd="15dp">


                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="45dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@mipmap/ic_audit_transaction_good_detail_1"
                        android:drawablePadding="-2dp"
                        android:gravity="center"
                        android:text="收藏"
                        android:textColor="@color/color_202020"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:drawableTop="@mipmap/ic_audit_transaction_good_detail_3"
                        android:drawablePadding="-2dp"
                        android:gravity="center"
                        android:text="客服"
                        android:textColor="@color/color_202020"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:id="@+id/fl_btn_buy_good"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/btn_dicker_good"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gradient_ff8933_ff3e01"
                            android:text="我要还价"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_buy_good"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gradient_ec18f8_6972ff"
                            android:text="立即购买"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>


