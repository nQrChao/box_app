<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <include layout="@layout/layout_common_title" />


            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableLeft="@mipmap/ic_kefu_gray"
                android:padding="16dp"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />
        </FrameLayout>


    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_fff4e8"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="12dp"
                    android:text="满足奖励要求后，48小时内发放奖励，如有延迟，请联系客服。"
                    android:textColor="@color/color_f16c00"
                    android:textSize="13sp"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/ll_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f5f5f5"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励码："
                            android:textColor="@color/color_ff0000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/color_ff0000"
                            android:textSize="15sp" />

                        <com.allen.library.SuperButton
                            android:id="@+id/tv_code_copy"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="复制"
                            android:textColor="@color/white"
                            app:sCornersRadius="48dp"
                            app:sSolidColor="@color/color_ff8f19" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_code_usage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转游信息"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="账号"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="累充"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_ff0000"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="小号"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_xh_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="区服"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_servername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="角色名"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_role_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <com.allen.library.SuperButton
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:text="角色ID"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_role_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <com.allen.library.SuperButton
                                android:id="@+id/tv_txt_time"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:minWidth="58dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:singleLine="true"
                                android:text="结束时间"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp"
                                app:sCornersRadius="12dp"
                                app:sSolidColor="@color/color_f5f5f5" />

                            <TextView
                                android:id="@+id/tv_transfer_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:maxWidth="200dp"
                                android:singleLine="true"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/tv_txt_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="（已结束）"
                                android:textColor="@color/color_ff0000"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/color_eeeeee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转游奖励"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_transfer_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励发放"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_transfer_issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_transfer_requirements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励要求"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_transfer_requirements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2"
                            android:textColor="@color/color_ff0000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注意事项"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/id_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2"
                            android:text="@string/string_transfer_notice"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>