<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="40dp"
                android:src="@mipmap/ic_audit_transaction_instructions_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="如何登录购买角色"
                android:textColor="@color/color_232323"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="57dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:gravity="center"
                android:paddingVertical="22dp"
                android:text="使用当前APP账号登录游戏"
                android:textColor="@color/color_232323"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="57dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:gravity="center"
                android:paddingVertical="22dp"
                android:text="选择带有“购买”标签小号进入"
                android:textColor="@color/color_232323"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="57dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:gravity="center"
                android:paddingVertical="22dp"
                android:text="选择正确区服"
                android:textColor="@color/color_232323"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="57dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:gravity="center"
                android:paddingVertical="22dp"
                android:text="恭喜，找到你买的角色啦"
                android:textColor="@color/color_232323"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ts_shape_gradient_ff6337_ff9100"
                android:gravity="center_horizontal"
                android:paddingHorizontal="40dp"
                android:paddingVertical="15dp"
                android:text="仍有疑问，咨询客服"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_back_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="75dp"
                android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:layout_marginBottom="20dp"
                android:text="前往交易首页"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>
