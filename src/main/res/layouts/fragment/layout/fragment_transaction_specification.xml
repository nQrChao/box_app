<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_title" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="40dp"
                android:src="@mipmap/ic_audit_transaction_specification_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="以下情况，将无法通过商品审核"
                android:textColor="@color/color_232323"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:layout_marginHorizontal="57dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区服信息不对"
                    android:textColor="@color/color_232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必须按照游戏内显示的区服信息填写"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:layout_marginHorizontal="57dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述内含有联系方式"
                    android:textColor="@color/color_232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不允许填写第三方联系"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:layout_marginHorizontal="57dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品描述与实际严重不符"
                    android:textColor="@color/color_232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核对描述，差距过大不予通过"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:layout_marginHorizontal="57dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截图信息不符"
                    android:textColor="@color/color_232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截图内容未包含战力、货币、物品等信息战力、货币、物品信息截图与游戏差距过大实际排行榜与截图所示差距过大上传了非游戏截图，或非本游戏截图"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_f5f5f5_5_radius"
                android:layout_marginHorizontal="57dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="角色异常"
                    android:textColor="@color/color_232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="角色无法登录、被封禁等"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>



            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ts_shape_gradient_ff6337_ff9100"
                android:paddingHorizontal="32dp"
                android:paddingVertical="15dp"
                android:text="仍有疑问，咨询客服"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
