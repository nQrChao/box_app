<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <include layout="@layout/layout_status_bar" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f2f2f2"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_behavior="com.zqhy.app.core.view.main.tool.FixAppBarLayoutBehavior">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ts_shape_ffffff_bottom_10_radius"
                android:visibility="visible"
                app:contentScrim="@drawable/ts_shape_ffffff_bottom_10_radius"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|enterAlways"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="小号交易"
                            android:textColor="@color/color_232323"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_transaction_need_to_know"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="12dp"
                            android:drawableStart="@mipmap/ic_hint_small"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="交易须知"
                            android:textColor="@color/color_232323"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <RelativeLayout
                            android:id="@+id/layout_zero"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/layout_one"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            android:background="@drawable/shape_10_radius_with_line_f2f2f2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我要卖号"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="小号出售"
                                    android:textColor="#ADADAD"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_transaction_main_tab_1" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_one"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            app:layout_constraintLeft_toRightOf="@+id/layout_zero"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="20dp"
                            app:layout_constraintHorizontal_weight="1"
                            android:background="@drawable/shape_10_radius_with_line_f2f2f2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="小号回收"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="官方一键回收"
                                    android:textColor="#ADADAD"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_transaction_main_tab_2" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:background="@drawable/shape_ff3333_ff8d8d_other_radius"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="送福利币"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="20dp">

                        <RelativeLayout
                            android:id="@+id/layout_sell"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_10_radius_with_line_f2f2f2"
                            android:paddingLeft="20dp"
                            android:paddingRight="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的交易"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="小号交易明细"
                                    android:textColor="#ADADAD"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginVertical="10dp"
                                android:src="@mipmap/ic_transaction_main_tab_3" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_record"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape_10_radius_with_line_f2f2f2"
                            android:paddingLeft="20dp"
                            android:paddingRight="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="交易须知"
                                    android:textColor="@color/color_232323"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="规则说明"
                                    android:textColor="@color/color_9b9b9b"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginVertical="10dp"
                                android:src="@mipmap/ic_transaction_main_tab_4" />
                        </RelativeLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:title="">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ts_shape_ffffff_bottom_10_radius"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_collapseMode="pin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="40dp"
                            android:text="小号交易"
                            android:textColor="@color/color_232323"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layout_zero_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/ic_transaction_main_tab_1_s"
                                android:drawablePadding="1dp"
                                android:gravity="center"
                                android:text="卖号"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_one_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/ic_transaction_main_tab_2_s"
                                android:drawablePadding="1dp"
                                android:gravity="center"
                                android:text="回收"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_sell_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/ic_transaction_main_tab_3_s"
                                android:drawablePadding="1dp"
                                android:gravity="center"
                                android:text="明细"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_record_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/ic_transaction_main_tab_4_s"
                                android:drawablePadding="1dp"
                                android:gravity="center"
                                android:text="须知"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_strict_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_strict_selection"
                        app:layout_constraintRight_toRightOf="@+id/tv_strict_selection"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_transaction_main_tab_bottom_line"/>

                    <TextView
                        android:id="@+id/tv_strict_selection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tv_detect_leakage"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        android:paddingVertical="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="官方严选"
                        android:textSize="18sp"
                        android:textColor="#232323"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_detect_leakage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@+id/tv_detect_leakage"
                        app:layout_constraintRight_toRightOf="@+id/tv_detect_leakage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_transaction_main_tab_bottom_line"/>

                    <TextView
                        android:id="@+id/tv_detect_leakage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_strict_selection"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        android:paddingVertical="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="超值捡漏"
                        android:textSize="18sp"
                        android:textColor="#232323"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_select"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最新上架"
                                android:textColor="@color/color_232323"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="9dp"
                                android:src="@mipmap/ic_audit_transaction_5" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_white_radius_60"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="搜索找号"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_audit_transaction_6" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:visibility="gone"
            android:id="@+id/xrecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
