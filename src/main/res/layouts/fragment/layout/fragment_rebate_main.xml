<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_rebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fl_reward_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_reward_bt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_reward_bt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_reward_bt" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="28dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:src="@mipmap/ic_reward_icon_bt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BT手游"
                                android:textColor="@color/white"
                                android:textSize="21sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="充值返利自助申请通道"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img_reward_bt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp">


                        <View
                            android:id="@+id/view_reward_bt"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_reward_bt"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:drawableRight="@mipmap/ic_reward_arrow_right"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="立即申请"
                            android:textColor="@color/white"
                            android:textSize="13sp" />


                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fl_reward_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/img_reward_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_reward_discount" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_reward_bt" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="28dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:src="@mipmap/ic_reward_icon_discount" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="折扣游戏"
                                android:textColor="@color/white"
                                android:textSize="21sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="活动奖励自助申请通道"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img_reward_discount"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp">


                        <View
                            android:id="@+id/view_reward_discount"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_reward_discount"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:drawableRight="@mipmap/ic_reward_arrow_right"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="立即申请"
                            android:textColor="@color/white"
                            android:textSize="13sp" />


                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fl_reward_h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/img_reward_h5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_reward_h5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_reward_bt" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="28dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:src="@mipmap/ic_reward_icon_h5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="H5游戏"
                                android:textColor="@color/white"
                                android:textSize="21sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="活动奖励自助申请通道"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img_reward_h5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp">


                        <View
                            android:id="@+id/view_reward_h5"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_reward_h5"
                            android:layout_width="86dp"
                            android:layout_height="30dp"
                            android:drawableRight="@mipmap/ic_reward_arrow_right"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="立即申请"
                            android:textColor="@color/white"
                            android:textSize="13sp" />


                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_rebate_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_rebate"
                android:layout_margin="14dp"
                android:background="@drawable/shape_f6f6f6_radius"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="@string/string_reward_tips"
                android:textColor="@color/color_272727"
                android:textSize="12sp"
                android:visibility="visible" />


            <RelativeLayout
                android:id="@+id/ll_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_rebate_tip"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_kefu_qq"
                    android:layout_width="86dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_rebate_qq"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_rebate_qq" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_ts_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_kefu"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="48dp"
                android:textSize="12sp"
                android:textColor="@color/color_9b9b9b"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>