<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_common_title" />

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="20dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="为保证您的账户安全，在您提交的注销申请生效前，需同时满足以下条件："
                    android:textSize="13sp"
                    android:textColor="@color/color_777777"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:text="1、账号处于安全状态"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="* 账号处于正常使用状态，无被盗风险\n* 最近7天内无绑定手机、换绑手机、找回密码、修改密码等操作"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="2、账号财产已结清"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="*没有资产、欠款、未结清的资金和虚拟权益，本账号没有未完成或存在争议的服务"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="3、账号权限解除"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="12dp"
                    android:text="账号已解除与其他产品的绑定关系"
                    android:textSize="14sp"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="4、账户无任何纠纷，包括投诉举报"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"/>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:drawableLeft="@drawable/selector_agreement"
            android:drawablePadding="6dp"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/color_999999"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"
            android:background="@drawable/selector_cancellation_next_text"
            android:text="下一步"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>