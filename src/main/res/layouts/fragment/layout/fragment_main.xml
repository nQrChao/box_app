<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zqhy.app.core.view.main.MainFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/titleBar_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.shizhefei.view.indicator.ScrollIndicatorView
                        android:id="@+id/fragment_tabmain_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginStart="6dp" />

                    <ImageView
                        android:id="@+id/img_tab_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@mipmap/img_tab_main"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_main_line_new"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_main_home_page_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:src="@mipmap/ic_user_main_search_new" />

                <FrameLayout
                    android:id="@+id/fl_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_setting">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:src="@mipmap/ic_user_main_message_new" />

                    <TextView
                        android:id="@+id/view_message_tips"
                        android:layout_width="18dp"
                        android:layout_height="12dp"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape_ff0000_radius"
                        android:gravity="center"
                        android:text="æ–°"
                        android:textColor="@color/white"
                        android:textSize="7sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_main_home_page_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/ic_main_home_page_download"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_right_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_main_right_float"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_main_right_float_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_close_gray_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_come_back_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_main_come_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_main_come_back_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_close_gray_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_rookies_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_main_rookies_show"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_main_rookies_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_close_gray_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_layout_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/fl_float_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right|bottom"
            android:orientation="vertical"
            android:visibility="visible">


            <ImageView
                android:id="@+id/iv_float_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_float_item"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/ic_main_float_top"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_float_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/ic_main_float"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_float_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="48dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/anim_main_float_right"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/ll_float_list"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_float"
                android:layout_marginTop="-0dp"
                android:background="@drawable/shape_black_transparent_80_radius"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:src="@mipmap/img_float_item_list" />

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_float_show_single_game"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="120dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_game_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_placeholder" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/app_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button1" />
    </LinearLayout>

</FrameLayout>