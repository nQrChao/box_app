<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_status_bar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@mipmap/ic_actionbar_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="领取代金券"
                    android:textColor="#232323"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_instructions_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:text="我的代金券"
                    android:textSize="14sp"
                    android:textColor="#232323"/>
            </RelativeLayout>

        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_f2f2f2_radius_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/shape_ff8ff5_6_radius_with_line_ffaa7b"
                        android:drawableLeft="@mipmap/ic_coupon_vip_left"
                        android:drawableRight="@mipmap/ic_coupon_store_right"
                        android:drawablePadding="5dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="12dp"
                        android:text="领6元省钱卡"
                        android:textSize="14sp"
                        android:textColor="#FF7C33" />

                    <TextView
                        android:id="@+id/tv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/shape_fffaef_6_radius_with_line_f5c164"
                        android:drawableLeft="@mipmap/ic_coupon_store_left"
                        android:drawableRight="@mipmap/ic_coupon_vip_right"
                        android:drawablePadding="5dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="12dp"
                        android:text="更多APP福利代金券，立即前往"
                        android:textSize="14sp"
                        android:textColor="#765424"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_game_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_game_coupon_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="游戏代金券"
                            android:textSize="18sp"
                            android:textColor="#5571FE"/>

                        <TextView
                            android:id="@+id/tv_game_coupon_tips"
                            android:layout_width="70dp"
                            android:layout_height="17dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_1a5571fe_big_radius"
                            android:text="32611元券"
                            android:textSize="10sp"
                            android:textColor="#5571FE"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mall_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_mall_coupon_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="商城专属券"
                            android:textSize="18sp"
                            android:textColor="#232323"/>

                        <TextView
                            android:id="@+id/tv_mall_coupon_tips"
                            android:layout_width="70dp"
                            android:layout_height="17dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_e2e2e2_big_radius"
                            android:text="无限兑换"
                            android:textSize="10sp"
                            android:textColor="#9B9B9B"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_game_detail_coupon_dialog_list_empty_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="暂无代金券"
                        android:textSize="14sp"
                        android:textColor="#6A6A68"/>

                </LinearLayout>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>