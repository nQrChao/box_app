<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@mipmap/ic_mine_top_bg_new"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/layout_status_bar" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_user_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableRight="@mipmap/ic_arrow_right_1"
                            android:drawablePadding="5dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape_big_radius_with_line_232323"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:gravity="center_vertical"
                            android:text="个人主页"
                            android:textSize="14sp"
                            android:textColor="#232323"/>

                        <ImageView
                            android:id="@+id/iv_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/fl_message"
                            android:padding="8dp"
                            android:src="@mipmap/ic_mine_top_download_black_new1" />

                        <FrameLayout
                            android:id="@+id/fl_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/iv_setting"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:src="@mipmap/ic_user_mine_message_black_new" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/view_message_tips"
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="right"
                                android:layout_margin="12dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_ff1414_big_radius" />

                        </FrameLayout>

                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:padding="8dp"
                            android:src="@mipmap/ic_user_mine_setting_black_new" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="10dp">

                            <ImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_user_login_new" />

                            <ImageView
                                android:id="@+id/iv_vip_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:src="@mipmap/ic_vip_unopen_new" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_layout_login"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="一二三四五六七八"
                                android:textColor="#232323"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    tools:text="账号：bat156846"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_real_name_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_white_big_radius"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:paddingVertical="2dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="未实名"
                                    android:textSize="8sp"
                                    android:textColor="#595674"/>

                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_bind_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:singleLine="true"
                                android:text="手机绑定：未绑，点击绑定"
                                android:textColor="#232323"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_layout_no_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请点击登录/注册"
                                android:textColor="#232323"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:singleLine="true"
                                android:text="热烈欢迎你的到来~撒花！"
                                android:textColor="#232323"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="14dp"
                            android:background="@mipmap/ic_new_user_mine_chart_group_bg">

                            <ImageView
                                android:id="@+id/ic_chart_icon"
                                android:layout_width="38dp"
                                android:layout_height="36dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="13dp"
                                android:src="@mipmap/ic_new_user_mine_chart_group_icon"/>

                            <TextView
                                android:id="@+id/tv_chart_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/ic_chart_icon"
                                app:layout_constraintLeft_toRightOf="@+id/ic_chart_icon"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginLeft="5dp"
                                android:text="我的群聊"
                                android:textSize="10sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/tv_chart_title"
                                app:layout_constraintLeft_toLeftOf="@+id/tv_chart_title"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="13dp"
                                android:drawableRight="@mipmap/ic_arrow_right_2"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:text="进入"
                                android:textSize="10sp"
                                android:textColor="#5473FC"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@mipmap/ic_new_user_mine_province_bg">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_province_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_vip"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:padding="10dp"
                        android:background="@drawable/shape_white_radius_10"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_ptb_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:textStyle="bold"
                                    android:text="0.0"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="平台币"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_give"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_give"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:textStyle="bold"
                                    android:text="0.0"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center_vertical"
                                    android:drawableRight="@mipmap/ic_mine_give_tips"
                                    android:drawablePadding="3dp"
                                    android:text="福利币"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_coupon_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:textStyle="bold"
                                    android:text="0张"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center_vertical"
                                    android:text="待使用券"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_faf8ff_5_radius"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_ptb"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingVertical="20dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/ic_new_user_mine_ptb_left"
                                    android:drawableRight="@mipmap/ic_new_user_mine_ptb_right"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical"
                                    android:text="充值平台币"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查看充值/游戏账单"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="48dp"
                                android:background="@drawable/dotted_line_y_d2d0da"/>

                            <LinearLayout
                                android:id="@+id/ll_coupon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingVertical="20dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@mipmap/ic_new_user_mine_card_left"
                                    android:drawableRight="@mipmap/ic_new_user_mine_ptb_right"
                                    android:drawablePadding="4dp"
                                    android:gravity="center_vertical"
                                    android:text="卡券包"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查看礼券/券明细"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        app:indicator_drawable_selected="@drawable/main_banner_indicator_selected"
                        app:indicator_drawable_unselected="@drawable/main_banner_indicator_unselected" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/shape_white_radius_10"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_menu"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="10sp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_menu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:background="@drawable/shape_00fffff_b3ffffff_radius"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/ll_menu"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginBottom="10dp">

                            <View
                                android:id="@+id/view_dot_1"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/shape_3797ff_big_radius"/>

                            <View
                                android:id="@+id/view_dot_2"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/shape_e3e2e2_big_radius"/>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="9dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_radius_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_cloud"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="27dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_new_user_mine_menu_cloud"
                            android:drawablePadding="15dp"
                            android:text="云挂机"
                            android:textSize="15sp"
                            android:textColor="#333333"/>

                        <View
                            android:id="@+id/view_clound"
                            android:layout_width="0.5dp"
                            android:layout_height="35dp"
                            android:background="#CCCCCC"/>

                        <TextView
                            android:id="@+id/tv_bipartition"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="27dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/ic_new_user_mine_menu_bipartition"
                            android:drawablePadding="15dp"
                            android:text="双开空间"
                            android:textSize="15sp"
                            android:textColor="#333333"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_game_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/shape_white_radius_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_games"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_game"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的游戏"
                                    android:textSize="14sp"
                                    android:textColor="#000000"/>

                                <View
                                    android:id="@+id/view_game"
                                    android:layout_width="12dp"
                                    android:layout_height="2.5dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/shape_000000_big_radius"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_appointment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="23dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_appointment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的预约"
                                    android:textSize="14sp"
                                    android:textColor="#666666"/>

                                <View
                                    android:id="@+id/view_appointment"
                                    android:visibility="invisible"
                                    android:layout_width="12dp"
                                    android:layout_height="2.5dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/shape_000000_big_radius"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_empty_data_1"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

