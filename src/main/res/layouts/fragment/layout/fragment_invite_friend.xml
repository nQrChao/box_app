<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEBCA"
    android:orientation="vertical"
    tools:context="com.zqhy.app.core.view.invite.InviteFriendFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/bg_image_invite"
                        android:orientation="vertical">

                        <include layout="@layout/layout_status_bar" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <include layout="@layout/item_title_layout" />


                            <TextView
                                android:id="@+id/tv_reward_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="12dp"
                                android:paddingLeft="12dp"
                                android:paddingTop="4dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="4dp"
                                android:text="积分明细"
                                android:textColor="@color/white" />
                        </FrameLayout>


                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_top"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/drawable_bg_invite_friends"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_white_radius"
                            android:lineSpacingMultiplier="1.25"
                            android:paddingLeft="12dp"
                            android:paddingTop="6dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="6dp"
                            android:text="@string/invite_friends_rule"
                            android:textColor="@color/color_red"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/fl_rule"
                        android:layout_marginLeft="26dp"
                        android:layout_marginBottom="-8dp"
                        android:background="@drawable/shape_red_radius"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:text="奖励规则"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_rule"
                        android:layout_marginTop="16dp">


                        <LinearLayout
                            android:id="@+id/ll_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/drawable_bg_invite_friends"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_white_radius"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/tv_sum_gold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/color_red"
                                    android:textSize="32sp" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="（积分）"
                                        android:textColor="@color/color_red"
                                        android:textSize="13sp" />

                                    <ImageView
                                        android:id="@+id/iv_question"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@mipmap/ic_question_task_2" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_white_radius"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/tv_count_people"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/color_red"
                                    android:textSize="32sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="（人）"
                                    android:textColor="@color/color_red"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:background="@drawable/shape_red_radius"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="4dp"
                            android:text="累计收入"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="26dp"
                            android:background="@drawable/shape_red_radius"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="4dp"
                            android:text="邀请人数"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </RelativeLayout>

            </ScrollView>

            <Button
                android:id="@+id/btn_invite_friends"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_red_radius"
                android:text="立即邀请好友"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>