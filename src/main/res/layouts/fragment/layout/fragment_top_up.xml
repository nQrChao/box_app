<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include layout="@layout/layout_common_title" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cl_bottom"
                app:layout_constraintVertical_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="20dp"
                        android:background="@mipmap/ic_top_up_top_bg">

                        <TextView
                            android:id="@+id/tv_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            tools:text="test27，账号余额："
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_recharge_detail"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_recharge_detail"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="￥"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:id="@+id/tv_ptb_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                tools:text="13026.21"
                                android:textSize="24sp"
                                android:textColor="#FFFFFF"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_give"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@mipmap/ic_top_up_give_left"/>

                            <TextView
                                android:id="@+id/tv_give"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                tools:text="含赠币1111556.32"
                                android:textSize="12sp"
                                android:textColor="#FFDD00"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/ic_top_up_give_right"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_recharge_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:background="@drawable/shape_white_big_radius"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:textStyle="bold"
                            android:text="充值明细"
                            android:textSize="14sp"
                            android:textColor="#0080FF"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/iv_gold"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:src="@mipmap/ic_top_up_gold_coin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/iv_gold"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:text="充值金额"
                            android:textSize="18sp"
                            android:textColor="#232323"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/iv_gold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/iv_gold"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:text="1平台币=1元，可充值任意游戏｜充值平台币后不支持退款"
                            android:textSize="12sp"
                            android:textColor="#9B9B9B"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_coin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:id="@+id/ll_et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/shape_fafafa_15_radius">

                        <EditText
                            android:id="@+id/et_ptb_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="自定义金额(10-99999整数)"
                            android:inputType="number"
                            android:maxLength="5"
                            android:textColor="#232323"
                            android:textColorHint="#9B9B9B"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="支付方式"
                        android:textSize="18sp"
                        android:textColor="#232323"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/ll_recharge_alipay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/shape_fafafa_15_radius_with_line_0080ff"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableLeft="@mipmap/ic_top_up_alipay"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:paddingVertical="13dp"
                                android:textStyle="bold"
                                android:text="支付宝支付"
                                android:textColor="@color/color_232323"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_recharge_wechat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_fafafa_15_radius"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableLeft="@mipmap/ic_top_up_wechat"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:paddingVertical="13dp"
                                android:textStyle="bold"
                                android:text="微信支付"
                                android:textColor="@color/color_232323"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:lineSpacingMultiplier="1.2"
                                android:text="提示：\n1、平台币不会过期，钱包充平台币可充值本APP任意游戏；\n2、钱包充值后，不可退换、也不可转赠，仅限充值账号使用；\n3、充值到游戏方式：游戏内充值，选择“账号余额”进行支付；\n4、账号余额中包含钱包额度+福利币额度，其中福利币仅限BT游戏使用。"
                                android:textColor="@color/color_585858"
                                android:textSize="11sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="6dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="4dp"
                                        android:layout_height="4dp"
                                        android:background="@drawable/drawable_dot_999999" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="钱包说明："
                                        android:textColor="@color/color_666666"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="不会过期，可充值本App里的任意游戏；"
                                        android:textColor="@color/color_666666"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="4dp"
                                        android:layout_height="4dp"
                                        android:background="@drawable/drawable_dot_999999" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="充值游戏方法："
                                        android:textColor="@color/color_666666"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="游戏内充值，选择“钱包支付”。"
                                        android:textColor="@color/color_666666"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应付："
                        android:textSize="16sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:id="@+id/tv_recharge_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="30"
                        android:textSize="24sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/shape_0080ff_big_radius"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold"
                    android:text="立即支付"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/line_shadow"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_pay_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="66dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/shape_ff2b3f_ff6a36_5_radius"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="支付后返"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_pay_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="30%"
                        android:textSize="18sp"
                        android:textColor="#FFDD00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="福利币，立即到账"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="55dp"
                    android:src="@mipmap/ic_top_up_bottom_arrow"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>