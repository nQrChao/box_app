<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:tag="VIP_TITLE">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/ic_actionbar_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="会员特权"
                android:textColor="@color/color_232323"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_ffd9be_radius_line"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:text="会员说明"
                android:textColor="#D27D3E"
                android:textSize="12sp" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/titleBar_Layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/idp_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_vip_page_bg_new"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="23dp"
                            android:layout_marginTop="20dp"
                            android:background="@mipmap/ic_vip_page_userinfo_bg_new"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rl_top">

                            <TextView
                                android:id="@+id/tv_vip_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ts_shape_radius_ffcb06_ff5b0a"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:visibility="gone"
                                tools:text="3.5w人开通" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:layout_marginVertical="13dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp">

                                    <ImageView
                                        android:id="@+id/iv_user_icon"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:src="@mipmap/ic_user_login" />

                                    <ImageView
                                        android:id="@+id/iv_vip_status"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:src="@mipmap/ic_vip_unopen_new" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/ll_user_unlogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="请点击登录/注册"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:text="开通会员，好礼享不停"
                                        android:textColor="#FEE0D2"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_user_vip_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="一二三四五六七八"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_user_nickname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:textColor="#FFB59E"
                                        android:textSize="10sp"
                                        tools:text="用户名：bay123456" />

                                    <TextView
                                        android:id="@+id/tv_vip_validity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:textColor="#FEE0D2"
                                        android:textSize="12sp"
                                        tools:text="有效期：2021/10/31至2021/11/30" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/ic_vip_page_open_vip_top" />

                                    <TextView
                                        android:id="@+id/tv_open_vip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/shape_ffddac_big_radius"
                                        android:paddingHorizontal="9dp"
                                        android:paddingVertical="7dp"
                                        android:text="开通会员"
                                        android:textColor="#F93409"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/shape_white_radius"
                            android:orientation="vertical"
                            android:paddingHorizontal="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:id="@+id/tv_vip_title_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开通会员享专属权益"
                                    android:textColor="#212841"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_vip_count_new"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="已有2777人享受权益"
                                    android:textColor="#9B9B9B"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_privilege"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="25dp"
                                android:nestedScrollingEnabled="false" />

                            <RelativeLayout
                                android:id="@+id/rl_open_tips"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="42dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="30dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_vip_page_open_vip_buttom"
                                    android:gravity="center"
                                    android:paddingVertical="13dp"
                                    android:text="￥30/月  开通会员"
                                    android:textColor="#57270F"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/shape_ffa530_ff3572_big_radius1"
                                    android:paddingHorizontal="9dp"
                                    android:paddingVertical="2dp"
                                    android:text="开通即回本 0元享"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp"
                                    android:visibility="gone" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    app:indicator_drawable_selected="@drawable/main_banner_indicator_selected"
                    app:indicator_drawable_unselected="@drawable/main_banner_indicator_unselected" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gift_day"
                        android:layout_width="0dp"
                        android:layout_height="33dp"
                        android:background="@drawable/shape_fd8f2f_big_radius"
                        android:gravity="center"
                        android:text="会员每日礼"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tv_vip_voucher"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_vip_voucher"
                        android:layout_width="0dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_white_big_radius"
                        android:gravity="center"
                        android:text="会员福利券"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/tv_gift_day"
                        app:layout_constraintRight_toLeftOf="@+id/tv_welfare_voucher"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_vip_voucher"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@drawable/shape_ff0000_radius"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="@+id/tv_vip_voucher"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_welfare_voucher"
                        android:layout_width="0dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_white_big_radius"
                        android:gravity="center"
                        android:text="会员神券"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/tv_vip_voucher"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_welfare_voucher"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@drawable/shape_ff0000_radius"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="@+id/tv_welfare_voucher"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_gift_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_white_radius"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="会员每日礼"
                            android:textColor="@color/color_333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ViewFlipper
                            android:id="@+id/viewflipper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoStart="true"
                            android:flipInterval="2500"
                            android:inAnimation="@anim/vf_anim_in"
                            android:outAnimation="@anim/vf_anim_out" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_new_vip_sign_in" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="会员签到"
                                android:textColor="@color/color_333333"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_sign_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:singleLine="true"
                                android:text="签到必出福利币，可选更多"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/ll_sign_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="今日获得："
                                    android:textColor="@color/color_999999"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_sign_reward"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#F8505A"
                                    android:textSize="12sp"
                                    tools:text="5元代金券" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_sign_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_ff3d63_big_radius_with_line"
                            android:paddingHorizontal="22dp"
                            android:paddingVertical="7dp"
                            android:text="签到"
                            android:textColor="#FF3D63"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_daily_privileged"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vip_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_white_radius"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="会员福利券"
                            android:textColor="@color/color_333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_giftbag_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开通即得6张5元无门槛通用券"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_vip_giftbag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="12dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_vip_coupon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_welfare_vouch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_white_radius"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="会员神券"
                            android:textColor="@color/color_333333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_welfare_vouch_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* 每款神券套餐7日内限购1次"
                            android:textColor="@color/color_333333"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="12dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_vip_voucher" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_meun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:text="最终解释权归平台所有"
                    android:textColor="#9B9B9B"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>