<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    android:scrollbars="none">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_task_info_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_task_center_sign_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/layout_common_title" />

                        <LinearLayout
                            android:id="@+id/ll_task_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="#21000000"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <ImageView
                                android:id="@+id/iv_task_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/ic_task_type_icon_sign_in" />

                            <TextView
                                android:id="@+id/tv_task_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="每日签到"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/ll_task_layout"
                        android:layout_width="match_parent"
                        android:layout_height="115dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">


                            <ImageView
                                android:id="@+id/iv_sign_page_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_sign_in_left" />

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/mViewPager"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/iv_sign_page_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_sign_in_right" />
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/shape_white_radius"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_sign_in_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/string_sign_in_detail"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="签到规则"
                                android:textColor="@color/color_333333"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/string_sign_in_rule"
                                android:textColor="@color/color_333333"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/line_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="我的积分"
                                            android:textColor="@color/color_333333"
                                            android:textSize="13sp" />

                                        <TextView
                                            android:id="@+id/tv_integral_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:singleLine="true"
                                            android:text="0"
                                            android:textColor="@color/color_007aff"
                                            android:textSize="13sp" />

                                        <ImageView
                                            android:id="@+id/iv_refresh_integral"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="12dp"
                                            android:padding="8dp"
                                            android:src="@mipmap/ic_integral_refresh_gray" />
                                    </LinearLayout>


                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:id="@+id/fl_integral_mall"
                                        android:layout_width="100dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="12dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_integral_mall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:drawableLeft="@mipmap/ic_integral_mall_blue"
                                            android:drawablePadding="6dp"
                                            android:text="积分商城"
                                            android:textColor="@color/color_007aff" />

                                    </FrameLayout>

                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="12dp">

                            <ImageView
                                android:id="@+id/iv_button_sign_in"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="24dp"
                                android:enabled="false"
                                android:src="@mipmap/ic_task_button_sign_in" />

                            <TextView
                                android:id="@+id/tv_sign_in_integral"
                                android:layout_width="46dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right"
                                android:background="@mipmap/ic_task_sign_in_integral"
                                android:gravity="center"
                                android:text="明日+20"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </FrameLayout>
                    </FrameLayout>

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_sign_in_ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/shape_white_radius"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_sign_in_ad_pic"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_placeholder_v_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/iv_sign_in_ad_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日话题"
                            android:textColor="@color/color_818181"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/iv_sign_in_ad_sub_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="《天下》全新资料片，送限定首充哒！"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_arrow_right" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</ScrollView>