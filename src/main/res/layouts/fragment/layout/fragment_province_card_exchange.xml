<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_status_bar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@mipmap/ic_actionbar_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="兑换代金券"
                    android:textColor="#232323"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_instructions_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:text="客服"
                    android:textSize="14sp"
                    android:textColor="#232323"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/shape_white_10_radius_with_line_f2f2f2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_province_card_tips_left_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="兑换提示：为支持原省钱卡用户及平台玩家可体验新上线的折扣省钱卡，我们提供限时兑换活动。福利币可按照一定比例兑换0.1折扣游戏专用代金券，每日限1次。"
                        android:textSize="12sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="兑换不可逆，请谨慎操作。"
                        android:textSize="12sp"
                        android:textColor="#FE5454"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="我的福利币："
                    android:textSize="18sp"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_audit_arrow_right"
                    android:drawablePadding="4dp"
                    android:background="@drawable/ts_shape_f2f2f2_big_radius"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="14dp"
                    android:text="兑换明细"
                    android:textSize="12sp"
                    android:textColor="#232323"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_exchange_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/ts_shape_fff1eb_big_radius"
                android:paddingVertical="4dp"
                android:paddingHorizontal="18dp"
                android:textStyle="bold"
                tools:text="当前兑换比：10福利币"
                android:textSize="14sp"
                android:textColor="#FF6A36"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/shape_fff6eb_radius_with_line_ff6aeb"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_ffa836_ff6a36_other_radius"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textStyle="bold"
                    android:text="每日可兑1次"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="￥"
                        android:textSize="10sp"
                        android:textColor="#FF6A36"/>

                    <TextView
                        android:id="@+id/tv_coupon_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="600"
                        android:textSize="26sp"
                        android:textColor="#FF6A36"/>

                    <TextView
                        android:id="@+id/tv_coupon_expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        tools:text="兑换后24小时内有效"
                        android:textSize="12sp"
                        android:textColor="#232323"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_coupon_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    tools:text="无门槛可用，专用于0.1折扣游戏"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="9dp"
                android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                android:gravity="center"
                android:textStyle="bold"
                android:text="立即兑换"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
