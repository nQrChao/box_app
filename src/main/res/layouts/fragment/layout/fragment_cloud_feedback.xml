<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_actionbar_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="产品反馈"
                android:textColor="#232323"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:paddingHorizontal="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*必选：选择您想反馈的问题点"
                    android:textSize="14sp"
                    android:textColor="#5571FE"/>

                <TextView
                    android:id="@+id/tv_condition_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:drawableLeft="@mipmap/ic_cloud_feedback_selected"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="功能异常：功能故障或不可用"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/tv_condition_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:drawableLeft="@mipmap/ic_cloud_feedback_unselect"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="产品建议：用的不爽，我建议..."
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/tv_condition_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:drawableLeft="@mipmap/ic_cloud_feedback_unselect"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="安全问题：密码、隐私、欺诈等"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/tv_condition_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:drawableLeft="@mipmap/ic_cloud_feedback_unselect"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="支付异常：无法支付、支付慢等"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/tv_condition_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:drawableLeft="@mipmap/ic_cloud_feedback_unselect"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="其他问题"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@drawable/shape_white_radius10_stroke_e5e5e5"
                    android:gravity="top|left"
                    android:hint="请输入不少于10个字的描述"
                    android:textColorHint="#9B9B9B"
                    android:textSize="14sp"
                    android:textColor="#232323"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="添加图片（最多3张"
                    android:textSize="14sp"
                    android:textColor="#999999"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"/>


                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="225dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="30dp"
                    android:background="@drawable/shape_55c0fe_5571fe_big_radius"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="提交"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>