<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_white_radius">
        <!-- -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:text="无法注销"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.2"
            android:text="账户未处于安全状态"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_title"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="请7天内不要进行绑定手机、换绑手机、找回密码、修改密码等操作后再尝试"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="203dp"
            android:layout_height="45dp"
            android:layout_marginVertical="30dp"
            android:layout_below="@+id/tv_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/ts_shape_gradient_big_radius_55a8fe_4e77fe"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>