<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_radius"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="IOS尊享版·会员免费"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@mipmap/ic_new_vip_ios_enjoy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="15dp"
            android:lineSpacingMultiplier="1.25"
            android:text="优化因IOS系统影响导致的掉签闪退问题。单独开通15元/月，开通会员免费赠送尊享版。"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="69dp"
            android:paddingVertical="13dp"
            android:gravity="center"
            android:background="@drawable/ts_shape_big_radius_ff6d3c_fb4c37"
            android:textStyle="bold"
            android:text="我知道了"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>