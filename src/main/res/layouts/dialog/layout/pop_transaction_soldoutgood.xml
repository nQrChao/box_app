<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/shape_white_radius_5_top"
android:orientation="vertical"
android:paddingHorizontal="27dp"
android:paddingTop="20dp"
android:paddingBottom="30dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="温馨提示"
    android:textColor="@color/color_232323"
    android:textSize="18sp"
    android:textStyle="bold" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="1、商品下架，即可恢复小号使用。如在选择小号页面没有找到此小号，请大退游戏重新登录即可。"
    android:textColor="#232323"
    android:textSize="14sp" />

<TextView
    android:id="@+id/tv_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="2、上架状态商品主动下架，需间隔24小时后可再次提交上架申请。"
    android:textColor="#232323"
    android:textSize="14sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_e5e5e5_60_radius"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="取消"
        android:textColor="@color/color_9b9b9b"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="确认下架"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

</LinearLayout>