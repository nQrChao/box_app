<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_white_radius_5_top"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="设置价格"
            android:textSize="18sp"
            android:textColor="#232323"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="温馨提示：出售收益以平台币形式发放，不支持提现"
            android:textSize="12sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/et_transaction_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            style="@style/CustomEditTextStyle"
            android:background="@drawable/shape_f5f5f5_big_radius"
            android:maxLength="5"
            android:inputType="number"
            android:hint="请输入价格（6-99999元）"
            android:textSize="14sp"
            android:textColorHint="#999999"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="出售所得"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="（5%手续费，最低5元）"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_transaction_got_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="- 平台币"
                android:textSize="16sp"
                android:textColor="#FF2B3F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="允许还价"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <ImageView
                android:id="@+id/iv_counter_offer_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_transaction_mysell_1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_counter_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_login_un_check"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="自动降价"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <ImageView
                android:id="@+id/iv_price_reduction_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_transaction_mysell_1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_price_reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_login_un_check"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每次设置价格默认关闭自动降价，需要请手动开启"
            android:textSize="14sp"
            android:textColor="#9B9B9B"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="55dp"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tips1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="170dp"
        android:paddingHorizontal="35dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:background="@mipmap/ic_transaction_pop_counter_offer_bg"
        android:text="允许还价后，你将会收到用户的还价提示。仅为提示，不会变更你的售价"
        android:textSize="14sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tips2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        android:paddingHorizontal="35dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:background="@mipmap/ic_transaction_pop_counter_offer_bg"
        android:text="允许还价后，你将会收到用户的还价提示。仅为提示，不会变更你的售价"
        android:textSize="14sp"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>