<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="28dp"
    android:background="@drawable/shape_white_top_radius_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改设备名"
        android:textSize="20sp"
        android:textColor="#232323"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:maxLength="8"
        android:background="@drawable/shape_white_radius_with_line_f2f2f2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:hint="请输入设备名"
        android:textColorHint="#ABABAB"
        android:textSize="16sp"
        android:textColor="#232323"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="98dp"
        android:paddingVertical="16dp"
        android:background="@drawable/shape_55c0fe_5571fe_big_radius"
        android:text="修改"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="#6A6A6A"/>

</LinearLayout>