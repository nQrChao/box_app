<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@mipmap/ic_province_card_dialog_bg"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="23dp"
    android:paddingRight="8dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:textStyle="bold"
        android:text="获得省钱卡体验资格"
        android:textSize="22sp"
        android:textColor="#E21F05"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="连续3天领取6-6通用券"
        android:textSize="16sp"
        android:textColor="#98690A"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_province_card_tips_image"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ts_shape_gradient_radius_ffce00_ff9a00"
        android:textStyle="bold"
        android:paddingHorizontal="62dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:text="立即开通"
        android:textSize="17sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:text="稍后再说"
        android:textSize="13sp"
        android:textColor="#C27700"/>

</LinearLayout>
</RelativeLayout>