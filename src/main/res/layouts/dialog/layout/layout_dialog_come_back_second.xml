<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:padding="8dp"
        android:layout_gravity="right"
        android:src="@mipmap/ic_dialog_come_back_close"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_dialog_come_back_second_top_left"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/shape_e40000_ed6a35_6_radius"
            android:text="0"
            android:textSize="21sp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_dialog_come_back_second_top_right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="14dp"
            android:layout_height="1dp"
            android:background="#FFF7C1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:lineSpacingMultiplier="1.2"
            android:text="领取回归免费礼，还有每日回归任务助\n力，为你的游戏旅途加油助威！"
            android:textSize="12sp"
            android:textColor="#FFF7C1"/>

        <View
            android:layout_width="14dp"
            android:layout_height="1dp"
            android:background="#FFF7C1"/>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:src="@mipmap/ic_dialog_come_back_second_center"/>

   <ImageView
       android:id="@+id/iv_confirm"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="20dp"
       android:src="@mipmap/ic_dialog_come_back_second_bottom"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        tools:text="将于2020/04/15过期"
        android:textSize="12sp"
        android:textColor="#CFC5C6"/>

</LinearLayout>