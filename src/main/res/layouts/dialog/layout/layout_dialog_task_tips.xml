<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="32dp"
        android:background="@drawable/shape_white_radius_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:text="每日签到"
            android:textSize="22sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_ffefef_big_radius"
                android:gravity="center"
                android:text="1"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="每周一0点重置签到进度"
                android:textSize="14sp"
                android:textColor="#232323"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_ffefef_big_radius"
                android:gravity="center"
                android:text="2"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="每日签到获得5积分"
                android:textSize="14sp"
                android:textColor="#232323"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_ffefef_big_radius"
                android:gravity="center"
                android:text="3"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="每周累签进度满4天额外赠10积分"
                android:textSize="14sp"
                android:textColor="#232323"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_ffefef_big_radius"
                android:gravity="center"
                android:text="4"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="每周累签进度满7天额外赠30积分"
                android:textSize="14sp"
                android:textColor="#232323"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="* 会员用户可在会员中心完成会员豪华签到，会员签到必定开出福利币、代金券、积分，3选1获得！"
            android:textSize="14sp"
            android:textColor="#9B9B9B"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="14dp"
            android:background="@drawable/shape_ffa530_ff3572_big_radius"
            android:textStyle="bold"
            android:gravity="center"
            android:text="我知道了"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>