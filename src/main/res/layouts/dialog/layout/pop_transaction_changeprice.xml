<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_5_top"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="修改价格"
        android:textColor="@color/color_232323"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="温馨提示：出售收益以平台币形式发放，不支持提现"
        android:textColor="#333333"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_transaction_price"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_f5f5f5_30_radius"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="5"
        android:singleLine="true"
        android:hint="填写价格，6-99999元"
        android:textColor="@color/color_232323"
        android:textColorHint="@color/color_999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售所得"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_commission_charge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（5%手续费，最低5元）"
                android:textColor="@color/color_232323"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_transaction_got_gold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="-平台币"
                android:textColor="#FF2B3F"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="允许还价"
            android:textSize="16sp"
            android:textColor="#232323"/>

        <ImageView
            android:id="@+id/iv_counter_offer_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_transaction_mysell_1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_counter_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_login_un_check"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="自动降价"
            android:textSize="16sp"
            android:textColor="#232323"/>

        <ImageView
            android:id="@+id/iv_price_reduction_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_transaction_mysell_1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_price_reduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_login_un_check"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_price_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每次设置价格默认关闭自动降价，需要请手动开启"
        android:textSize="14sp"
        android:textColor="#9B9B9B"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_f5f5f5_30_radius"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_f5f5f5"
            android:digits="1234567890"
            android:inputType="number"
            android:hint="请输入验证码"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:textColor="@color/color_232323"
            android:textColorHint="@color/color_9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="获取验证码"
            android:textColor="#5571FE" />
    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="* 若低价出售小号导致被秒号风险，需自行承担。"
        android:textColor="@color/color_6a6a6a"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_e5e5e5_60_radius"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="取消"
            android:textColor="@color/color_9b9b9b"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="确认改价"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>