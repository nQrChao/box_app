<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="登录淘号角色"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:textColor="@color/color_232323"
            android:id="@+id/tv_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、使用当前APP账号登录游戏。"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、选择带有“淘号”标签小号进入。"
            android:textSize="14sp" />
        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3、选择对应区服。"
            android:textSize="14sp" />
        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4、查看淘号角色。（有几率淘到极品号，也有几率淘到废号，纯属运气！）"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/btn_got_it"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>