<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_2"
        android:layout_marginHorizontal="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="17dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="点评活动"
            android:textSize="22sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得点评推荐勋章，将随机奖励"
                android:textSize="14sp"
                android:textColor="#9B9B9B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30-100"
                android:textSize="14sp"
                android:textColor="#FF707C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textSize="14sp"
                android:textColor="#9B9B9B"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="推荐标准："
            android:textSize="14sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:background="@drawable/shape_ffefef_big_radius"
                android:text="1"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lineSpacingMultiplier="1.25"
                android:text="点评字数＞150字以上"
                android:textSize="14sp"
                android:textColor="#9B9B9B"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:background="@drawable/shape_ffefef_big_radius"
                android:text="2"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lineSpacingMultiplier="1.25"
                android:text="内容具有参考意义，例如攻略、游戏画面/玩法/操作等点评内容！"
                android:textSize="14sp"
                android:textColor="#9B9B9B"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:background="@drawable/shape_ffefef_big_radius"
                android:text="3"
                android:textSize="12sp"
                android:textColor="#FF2D3F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lineSpacingMultiplier="1.25"
                android:text="若复制app内已存在内容，发现回收奖励，且达到一定次数将停止账号点评获奖资格。"
                android:textSize="14sp"
                android:textColor="#9B9B9B"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="推荐勋章"
            android:textSize="14sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_detail_comment_type_strategy"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ic_game_detail_comment_type_review"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:gravity="center"
            android:textStyle="bold"
            android:text="我知道了"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

</LinearLayout>