<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ts_shape_f8f9fc_radius"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="22dp"
        android:text="返利方式说明"
        android:textColor="@color/color_232323"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_stroke_d6d6d6"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_gift_arrow"
            android:drawablePadding="6dp"
            android:text="自动返利"
            android:textColor="@color/color_232323"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingMultiplier="1.25"
            android:text="充值达到对应标准后，无须手动在APP内申请返利，游戏一般会在次日0点后自动将元宝、钻石等货币类物品发送到充值的角色内，可在游戏邮件内或者角色信息内查看！"
            android:textColor="@color/color_9b9b9b"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="道具返利请联系客服申请"
        android:textColor="#5571FE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_stroke_d6d6d6"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_gift_arrow"
            android:drawablePadding="6dp"
            android:text="手动返利"
            android:textColor="@color/color_232323"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingMultiplier="1.25"
            android:text="充值达到对应标准后，请在充值48小时内，在APP手动填写信息申请返利，提交审核后发放到游戏内。"
            android:textColor="@color/color_9b9b9b"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
        android:gravity="center"
        android:text="我 知 道 了"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>