<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_top_radius_10"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_bipartition_delete"
        android:drawablePadding="8dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_common_selector"
        android:text="删除游戏分身"
        android:textSize="16sp"
        android:textColor="#232323"/>

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_bipartition_clear"
        android:drawablePadding="8dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_common_selector"
        android:text="清除游戏缓存数据"
        android:textSize="16sp"
        android:textColor="#232323"/>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/item_common_selector"
        android:text="@string/cancel" />
</LinearLayout>

