<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_white_radius"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="认证成功"
            android:textColor="@color/color_232323"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_integral_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingMultiplier="1.25"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="恭喜获得10元代金券一枚"
            android:textColor="@color/color_232323"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ts_shape_f2f2f2_radius"
            android:lineSpacingMultiplier="1.25"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:text="代金券是游戏内满足条件立即扣减使用的。"
            android:paddingBottom="12dp"
            android:textColor="@color/color_232323"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ts_shape_0052fe_radius"
            android:text="立即查看"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </LinearLayout>

</RelativeLayout>