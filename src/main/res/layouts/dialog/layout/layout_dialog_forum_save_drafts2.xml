<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="28dp"
    android:background="@drawable/shape_white_top_radius_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容尚未发布"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#232323"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.2"
        android:text="是否需要保存至草稿箱再退出?"
        android:textSize="16sp"
        android:textColor="#232323"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:background="@drawable/shape_f5f5f5_big_radius"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="不保存,直接退出"
            android:textSize="15sp"
            android:textColor="#818181"/>
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:paddingVertical="12dp"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:gravity="center"
            android:text="保存并退出"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>