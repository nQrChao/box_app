<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_5_top"
    android:orientation="vertical"
    android:paddingHorizontal="27dp"
    android:paddingTop="20dp"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="我要还价"
        android:textColor="@color/color_232323"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前售价:"
            android:textColor="@color/color_9b9b9b"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="￥"
            android:textColor="@color/color_232323"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="9"
            android:textColor="@color/color_232323"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_f5f5f5_30_radius"
        android:orientation="horizontal"
        android:paddingStart="20dp">

        <EditText
            android:id="@+id/et_new_price"
            android:digits="1234567890"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_f5f5f5"
            android:inputType="number"
            android:hint="请输入你的期望金额（整数）"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:textColor="@color/color_232323"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 将自动为你收藏此商品"
        android:textSize="14sp"
        android:textColor="#6a6a68"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 建议合理还价；卖家改价后会通过消息中心通知你"
        android:textSize="14sp"
        android:textColor="#6a6a68"
        />

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_f5f5f5_60_radius"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="取消"
            android:textColor="@color/color_9b9b9b"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="确认还价"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>