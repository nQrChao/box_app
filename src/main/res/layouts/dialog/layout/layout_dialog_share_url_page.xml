<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btn_share_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_share_invite_circle"
                android:gravity="center"
                android:text="@string/share_circle"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/btn_share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_share_invite_wechat"
                android:gravity="center"
                android:text="@string/share_wechat"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/btn_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_share_invite_qq"
                android:gravity="center"
                android:text="@string/share_qq"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/btn_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_share_invite_qzone"
                android:gravity="center"
                android:text="@string/share_qzone"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/btn_share_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/ic_share_invite_copy"
                android:gravity="center"
                android:text="@string/share_copy_url"
                android:textSize="@dimen/small_text" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>