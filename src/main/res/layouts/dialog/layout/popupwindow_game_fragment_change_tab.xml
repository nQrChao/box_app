<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3232323"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="BT游戏"
                android:textSize="16sp"
                android:textColor="#5571FE"/>

            <TextView
                android:id="@+id/tv_bt_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上线即送VIP、元宝等福利"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

            <ImageView
                android:id="@+id/iv_bt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_fragment_popupwindow_item_selected"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="折扣游戏"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_discount_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="充值自动享折扣"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

            <ImageView
                android:id="@+id/iv_discount_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_fragment_popupwindow_item_selected"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_h5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="H5游戏"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_h5_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点开即玩，无需下载"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

            <ImageView
                android:id="@+id/iv_h5_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_fragment_popupwindow_item_selected"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="热门榜"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_hot_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOP游戏榜单"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

            <ImageView
                android:id="@+id/iv_hot_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_fragment_popupwindow_item_selected"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="新游榜"
                android:textSize="16sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_new_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="好玩新游一览"
                android:textSize="12sp"
                android:textColor="#9B9B9B"/>

            <ImageView
                android:id="@+id/iv_new_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_game_fragment_popupwindow_item_selected"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
