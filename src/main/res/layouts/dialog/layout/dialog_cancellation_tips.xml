<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_white_radius">
        <!-- -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:text="注销提示"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.2"
            android:text="账户存在可用财产"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_title"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="建议使用完毕再注销账号，若仍要注销将视为你自愿放弃且无法继续使用"
            android:textColor="#333333"
            android:textSize="14sp"/>
        <!-- -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_gradient_gray"
                android:gravity="center"
                android:text="暂不注销"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ts_shape_gradient_big_radius_55a8fe_4e77fe"
                android:gravity="center"
                android:text="仍要注销"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>