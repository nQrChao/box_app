<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_white_radius_2">
        <!-- -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:text="设置昵称"
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/shape_radius_f2f2f2"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:singleLine="true"
            android:hint="请输入昵称"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_777777"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_nick_name"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="*通过审核后，将成为你的新昵称"
            android:textColor="#333333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:paddingHorizontal="85dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ts_shape_gradient_big_radius_55a8fe_4e77fe"
            android:layout_centerHorizontal="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tv_confirm"
            android:paddingHorizontal="85dp"
            android:paddingVertical="15dp"
            android:layout_centerHorizontal="true"
            android:text="取消"
            android:textColor="@color/color_999999"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>