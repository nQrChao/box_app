<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:background="@mipmap/img_dialog_bg_item_voucher"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp">

            <TextView
                android:id="@+id/tv_voucher_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="6"
                android:textColor="#FD1F30"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="元"
                android:textColor="#FD1F30"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_voucher_condition"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-4dp"
            android:layout_marginRight="6dp"
            android:background="#FF4B59"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="72dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text="满980000元可用"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_voucher_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="首\n充\n券"
            android:textColor="#DDAB6B"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>