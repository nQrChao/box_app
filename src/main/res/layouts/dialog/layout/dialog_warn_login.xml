<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_white_radius">
        <!-- -->
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="4"
            android:text="目前仅支持大陆手机，非大陆手机请选择用户名注册或联系客服咨询"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:text=""
            android:textColor="#FF5400"
            android:textSize="12sp" />
        <!-- -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:weightSum="11">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="5"
                android:background="@drawable/shape_btn_gradient_gray"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="5"
                android:background="@drawable/shape_btn_gradient_default"
                android:text="前往登录"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <!-- -->

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>