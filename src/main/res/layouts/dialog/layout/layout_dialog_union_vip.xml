<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_dialog_union_vip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="37dp"
        android:background="@drawable/shape_white_radius_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:lineSpacingMultiplier="1.3"
            android:text="恭喜您已成为小点游戏VIP用户，后续可享受VIP一对一服务，所有问题都可以咨询您的专属客服！"
            android:textSize="15sp"
            android:textColor="#57270F"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP客服微信号："
                android:textSize="15sp"
                android:textColor="#57270F"/>

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_eeeeee_2_radius"
                android:paddingHorizontal="18dp"
                android:paddingVertical="3dp"
                android:text="jkekek0112"
                android:textSize="15sp"
                android:textColor="#57270F"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="*添加时请备注您的游戏账号"
            android:textSize="15sp"
            android:textColor="#57270F"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_ffa446_big_radius"
                android:gravity="center"
                android:paddingVertical="13dp"
                android:textStyle="bold"
                android:text="联系客服"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_ffa446_big_radius_with_line"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:paddingVertical="13dp"
                android:textStyle="bold"
                android:text="我知道了"
                android:textSize="16sp"
                android:textColor="#FFA446"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>