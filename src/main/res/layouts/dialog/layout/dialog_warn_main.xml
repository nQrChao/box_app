<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_white_radius">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="服务条款与隐私政策提示"
            android:textColor="#030303"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- -->
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="20dp"
            android:lineSpacingMultiplier="1.3"
            android:text="欢迎使用APP"
            android:textColor="#232323"
            android:textSize="14sp" />
        <!-- -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="162dp"
            android:layout_height="44dp"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_btn_gradient_default"
            android:text="同意并继续"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <!-- -->
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="拒绝并退出"
            android:textColor="@color/color_9c9c9c"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/btn_cancel" />
    </RelativeLayout>
</LinearLayout>