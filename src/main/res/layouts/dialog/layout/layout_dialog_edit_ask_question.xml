<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="向xxx位玩过还有游戏的人请教"/>


        <TextView
            android:id="@+id/tv_btn_confirm"
            android:layout_width="wrap_content"
            android:minWidth="58dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="13sp"
            android:text="提问"
            android:textColor="@color/white"
            android:background="@color/color_ff8f19"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_dialog_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/color_666666"
        android:textSize="10sp"
        android:visibility="gone"
        android:lineSpacingMultiplier="1.25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_answer_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@color/color_f4f5f6"
            android:gravity="left"
            android:hint="向Ta请教..."
            android:minHeight="72dp"
            android:maxHeight="96dp"
            android:maxLength="150"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_b7b7b7"
            android:textSize="13sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>