<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_white_radius">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="预约成功"
            android:textColor="#030303"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- -->
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="游戏上线将通过app消息提醒你"
            android:textColor="#232323"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingMultiplier="1.3"
            android:text="注意：app消息提醒受手机设备影响达到率较低，但是你可以设置日历提醒获得100%提醒哦~"
            android:textColor="#9b9b9b"
            android:textSize="14sp" />
        <!-- -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_below="@+id/content2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_btn_gradient_default"
            android:text="设置提醒，领首发专属福利"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <!-- -->
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="不需要，我自己记"
            android:textColor="@color/color_9c9c9c"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/btn_cancel" />
    </RelativeLayout>
</LinearLayout>