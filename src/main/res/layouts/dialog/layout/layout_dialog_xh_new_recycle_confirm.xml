<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:text="回收确认"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="15dp"
                android:src="@mipmap/ic_close_black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_fafafa_10_radius_with_f2f2f2_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_game_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:layout_marginRight="5dp"
                        tools:text="送全GM商城"
                        android:textColor="#171717"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_game_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:background="@drawable/shape_f2f2f2_radius_2"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/app_name"
                        android:textColor="#666666"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_xh_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6dp"
                    android:text="小号："
                    android:textColor="#232323"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="福利币总额："
                        android:textSize="12sp"
                        android:textColor="#232323"/>

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#FF5A5A"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_xh_account_top_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_game_icon"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@id/iv_game_icon"
                    android:text="实际充值金额："
                    android:textColor="#FC4D44"
                    android:textSize="12sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_xh_account_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_xh_account_top_up"
                    android:layout_toRightOf="@id/tv_xh_account_top_up"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="130"
                    android:textColor="#FC4D44"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_game_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_game_name"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/iv_game_icon"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="卡牌·角色 "
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="回收成功后，将获得"
                android:textSize="14sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="5000福利币"
                android:textSize="14sp"
                android:textColor="#FF5A5A"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:text="确认回收后，该游戏此小号全区服角色将一\n并回收，归属平台所有。24小时内可赎回"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginHorizontal="38dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/ts_shape_4e76ff_10_radius"
            android:gravity="center"
            android:textStyle="bold"
            android:text="确认回收"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>