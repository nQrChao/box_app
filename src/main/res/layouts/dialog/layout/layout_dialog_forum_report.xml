<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_white_top_radius_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"
    android:paddingTop="30dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="举报@陈平安发布的内容"
        android:textColor="#999999"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingVertical="5dp"
            android:textColor="#383C42"
            android:paddingStart="10dp"
            android:text="有垃圾、广告或拉人信息" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingVertical="5dp"
            android:textColor="#383C42"
            android:paddingStart="10dp"
            android:text="有政治敏感、暴力色情信息" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#383C42"
            android:button="@drawable/selector_report"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="辱骂、歧视、恶意引战" />


        <RadioButton
            android:id="@+id/radio4"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:textColor="#383C42"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="涉及抄袭或侵权" />

        <RadioButton
            android:id="@+id/radio5"
            android:layout_marginVertical="3dp"
            android:layout_width="wrap_content"
            android:textColor="#383C42"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_report"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="其他" />


    </RadioGroup>

    <EditText
        android:id="@+id/et_other"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_f5f5f5_30_radius"
        android:hint="填写其他原因"
        android:visibility="gone"
        android:inputType="textMultiLine"
        android:maxHeight="300dp"
        android:paddingVertical="10dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_f5f5f5_big_radius"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="取消"
            android:textColor="#818181"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>