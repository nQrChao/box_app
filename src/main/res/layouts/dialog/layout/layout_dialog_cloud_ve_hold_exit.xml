<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="28dp"
    android:background="@drawable/shape_white_top_radius_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回app"
        android:textSize="18sp"
        android:textColor="#5571FE"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.2"
        android:text="您将退出App挂机页面，已开启挂机的游戏在云端不会退出。"
        android:textSize="14sp"
        android:textColor="#232323"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/shape_e5e5e5_big_radius"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="#6A6A6A"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:paddingVertical="12dp"
            android:background="@drawable/shape_55c0fe_5571fe_big_radius"
            android:gravity="center"
            android:text="确认"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>