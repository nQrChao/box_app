<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:background="@drawable/shape_white_top_radius_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="更多服务"
            android:textSize="18sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_download"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="下载管理"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_action_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_report"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="折扣举报"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_action_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_feddback"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="游戏反馈"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_action_kefu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_kefu"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="联系客服"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="选择分享方式"
            android:textSize="18sp"
            android:textColor="#232323"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_share"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="立即分享"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/tv_action_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_game_detail_more_action_copy"
                android:drawablePadding="3dp"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textSize="12sp"
                android:textColor="#232323"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>