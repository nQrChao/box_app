<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape_white_radius_10"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="1折捡漏"
            android:textSize="16sp"
            android:textStyle="bold" />



        <TextView
            android:textColor="@color/color_232323"
            android:id="@+id/tv_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、官方回收号，现在1折放出，超值福利购！快来捡漏吧！"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、小号与正常交易流程无差别，均已通过官方验证审核，请放心购入。"
            android:textSize="14sp" />

        <TextView
            android:textColor="#FF6337"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 购买的号支持交易上架、回收等。"
            android:textSize="14sp" />
        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3、部分游戏存在设备限制，若您曾在其他平台玩过可能会无法登录。请购买前先下载游戏尝试是否可正常登录，避免不必要的损失。"
            android:textSize="14sp" />
        <TextView
            android:textColor="@color/color_232323"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4、禁止未成年人参与虚拟商品交易。"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/btn_got_it"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>