<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_5_top"
    android:orientation="vertical"
    android:paddingHorizontal="27dp"
    android:paddingTop="20dp"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="温馨提示"
        android:textColor="@color/color_232323"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="以下情况时，小号将无法出售："
        android:textColor="@color/color_232323"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1、游戏非正常运营状态时（例：停运下线）；"
        android:textColor="@color/color_232323"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_content_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2、H5类型游戏不支持；"
        android:textColor="@color/color_232323"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="3、被禁售小号无法出售，详情可查看小号提示；"
        android:textColor="@color/color_232323"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="4、部分因游戏商限制的游戏，不支持其小号交易；"
        android:textColor="@color/color_232323"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="5、0元充值小号不支持出售；"
        android:textColor="@color/color_232323"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="* 如有疑问，可联系客服进行咨询"
        android:textColor="@color/color_9b9b9b"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_e5e5e5_60_radius"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="咨询客服"
            android:textColor="@color/color_9b9b9b"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/ts_shape_gradient_55c0fe_5571fe"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>