<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_rmbusergive_dialog_bg_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@mipmap/ic_rmbusergive_dialog_bg_center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_rmbusergive_dialog_title_gained"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:lineSpacingMultiplier="1.25"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="请尽快使用以下代金券\n以免逾期失效"
        android:textSize="13sp"
        android:textColor="#FFC8A7"/>

    <LinearLayout
        android:id="@+id/ll_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="4dp"
        android:background="@mipmap/ic_rmbusergive_dialog_confirm_gained"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="65dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:gravity="center|bottom"
        android:background="@mipmap/ic_rmbusergive_dialog_bottom"
        android:text="我知道了，关闭弹框"
        android:textSize="14sp"
        android:textColor="#FFCA97"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rmbusergive_dialog_bg_bottom"/>

</LinearLayout>