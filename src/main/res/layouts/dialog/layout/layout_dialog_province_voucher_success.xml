<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_2"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="领取成功"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_province_voucher_success"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="6元无门槛通用代金券"
            android:textSize="14sp"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="有效期为1天，请尽快使用哦~"
            android:textSize="12sp"
            android:textColor="@color/color_999999"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_advertising"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_advertising"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_advertising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ts_shape_gradient_ff5b0a_ff150d_1"
                android:paddingVertical="5sp"
                android:paddingHorizontal="8dp"
                android:text="重磅推荐"
                android:textSize="11sp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="69dp"
            android:paddingVertical="12dp"
            android:background="@drawable/ts_shape_gradient_radius_ffce00_ff9a00"
            android:textStyle="bold"
            android:text="我知道了"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
