<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="gameHallListBean"
            type="com.chaoji.im.data.model.ModGameHallList" />

    </data>

    <LinearLayout
        android:layout_width="@dimen/idp_90"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_3"
        android:paddingVertical="@dimen/idp_5">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_70"
            android:layout_height="@dimen/idp_70"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_3"
            app:loadRound11Image="@{gameHallListBean.gameicon}"
            tools:src="@mipmap/mod_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{gameHallListBean.gamename}"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold"
            tools:text="游戏名称" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{gameHallListBean.genre_str}"
            android:textColor="@color/text_hit_color"
            android:textSize="@dimen/isp_12"
            android:textStyle="bold"
            tools:text="策略 休闲" />


    </LinearLayout>

</layout>