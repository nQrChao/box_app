<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <import type="com.box.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="vm"
            type="com.zqhy.mod.fragment.NavigationXiaoGameModel" />

        <variable
            name="click"
            type="com.zqhy.mod.fragment.FragmentXiaoGame.ProxyClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="true"
            app:srlEnableRefresh="true">

            <com.box.other.scwang.smart.refresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/idp_10">

                <com.box.common.ui.layout.StatusLayout
                    android:id="@+id/hl_hint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/titleView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/idp_10"
                            android:layout_marginVertical="@dimen/idp_5"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/idp_140"
                                android:layout_marginEnd="@dimen/idp_110"
                                android:background="@drawable/fragment_h5_game_title_bg1">

                                <ImageView
                                    android:layout_width="@dimen/idp_150"
                                    android:layout_height="@dimen/idp_16"
                                    android:layout_marginStart="@dimen/idp_8"
                                    android:layout_marginTop="@dimen/idp_15"
                                    android:src="@drawable/fragment_h5_game_title_text_img_1" />

                                <ProgressBar
                                    android:id="@+id/progress"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/idp_7"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/idp_80"
                                    android:indeterminate="false"
                                    android:paddingStart="@dimen/idp_6"
                                    android:paddingEnd="@dimen/idp_9"
                                    android:progress="@{vm.fuLiProgress}"
                                    android:progressDrawable="@drawable/progressbar_update"
                                    tools:progress="100" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewTop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/idp_45"
                                    android:orientation="horizontal"
                                    android:paddingStart="@dimen/idp_5"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    app:spanCount="2"
                                    bind:itemCount="4"
                                    tools:listitem="@layout/item_game_fuli_task" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="@dimen/idp_120"
                                android:layout_height="@dimen/idp_140"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/fragment_h5_game_title_bg2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/topTitleText2"
                                    android:layout_width="@dimen/idp_100"
                                    android:layout_height="@dimen/idp_16"
                                    android:layout_marginStart="@dimen/idp_10"
                                    android:layout_marginTop="@dimen/idp_15"
                                    android:src="@drawable/fragment_h5_game_title_text_img_2" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@id/topTitleButton2"
                                    android:layout_below="@id/topTitleText2"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:onClick="@{()-> click.fuLiDialog()}"
                                    android:orientation="horizontal"
                                    android:paddingVertical="@dimen/idp_15">

                                    <com.box.common.ui.view.DrawableTextView
                                        android:id="@+id/fuLiCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:ellipsize="end"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="@{vm.pingtaibi}"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/isp_21"
                                        android:textStyle="bold"
                                        tools:text="18.5" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/idp_3"
                                        android:layout_marginTop="@dimen/idp_2"
                                        android:gravity="center"
                                        android:text="元"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/isp_14"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="@dimen/idp_15"
                                        android:layout_height="@dimen/idp_15"
                                        android:layout_marginStart="@dimen/idp_5"
                                        android:layout_marginTop="@dimen/idp_2"
                                        android:src="@drawable/fragment_h5_game_wenhao2"
                                        app:tint="@color/white" />

                                </LinearLayout>


                                <Button
                                    android:id="@+id/topTitleButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/idp_25"
                                    android:layout_marginBottom="@dimen/idp_10"
                                    android:background="@drawable/h5_game_tip_button_selector"
                                    android:onClick="@{()-> click.fuLiBi()}"
                                    android:paddingHorizontal="@dimen/idp_15"
                                    android:text="去使用  >"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/isp_11"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/idp_45"
                            android:layout_marginHorizontal="@dimen/idp_10"
                            android:layout_marginVertical="@dimen/idp_13"
                            android:background="#40AF6AF8"
                            android:gravity="center_vertical"
                            android:onClick="@{()-> click.youHuiTip()}"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_15">

                            <ImageView
                                android:layout_width="@dimen/idp_20"
                                android:layout_height="match_parent"
                                android:src="@drawable/fragment_h5_game_laba" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_5"
                                android:drawablePadding="@dimen/idp_7"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="优惠提示"
                                android:textColor="#7C00FF"
                                android:textSize="@dimen/isp_16"
                                android:textStyle="bold"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_5"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/idp_5"
                                android:text="您有一份新人优惠待领取"
                                android:textColor="#7C00FF"
                                android:textSize="@dimen/isp_12"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="@dimen/idp_8"
                                android:layout_height="match_parent"
                                android:src="@drawable/fragment_h5_game_jiantou1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/idp_40"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/idp_7"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="试玩有奖"
                                android:textColor="@color/text_default_color"
                                android:textSize="@dimen/isp_17"
                                android:textStyle="bold"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_10"
                                android:background="@drawable/fragment_h5_game_title_text_bg"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/idp_3"
                                android:text="首玩10分钟送福利币"
                                android:textColor="#7C00FF"
                                android:textSize="@dimen/isp_12"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <com.box.common.ui.view.DrawableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableEnd="@drawable/fragment_h5_game_wenhao2"
                                android:drawablePadding="@dimen/idp_5"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:onClick="@{()-> click.wanFaDialog()}"
                                android:singleLine="true"
                                android:text="玩法说明"
                                android:textColor="@color/hint_text"
                                android:textSize="@dimen/isp_13"
                                app:drawableHeight="@dimen/idp_13"
                                app:drawableTint="@color/hint_text"
                                app:drawableWidth="@dimen/idp_13" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/idp_5"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            bind:itemCount="2"
                            tools:listitem="@layout/item_game_shiwan" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/idp_40"
                            android:layout_marginTop="@dimen/idp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/idp_7"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="热门精选"
                                android:textColor="@color/text_default_color"
                                android:textSize="@dimen/isp_17"
                                android:textStyle="bold"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_10"
                                android:background="@drawable/fragment_h5_game_title_text_bg"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/idp_3"
                                android:text="无广告 畅快玩"
                                android:textColor="#7C00FF"
                                android:textSize="@dimen/isp_12" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableEnd="@drawable/fragment_h5_game_wenhao2"
                                android:drawablePadding="@dimen/idp_5"
                                android:gravity="center_vertical"
                                android:hint="玩法说明"
                                android:lines="1"
                                android:singleLine="true"
                                android:textSize="@dimen/isp_13"
                                android:visibility="gone"
                                app:drawableHeight="@dimen/idp_20"
                                app:drawableTint="#575757"
                                app:drawableWidth="@dimen/idp_20" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/a_rounded_20"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_5"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:spanCount="2"
                            tools:listitem="@layout/item_game_hot" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/idp_40"
                            android:layout_marginTop="@dimen/idp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/idp_7"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="更多好玩"
                                android:textColor="@color/text_default_color"
                                android:textSize="@dimen/isp_17"
                                android:textStyle="bold"
                                app:drawableHeight="@dimen/idp_16"
                                app:drawableTint="@color/black80"
                                app:drawableWidth="@dimen/idp_16" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/idp_5"
                            android:background="@drawable/a_rounded_20"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/idp_5"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            tools:listitem="@layout/item_game_more" />

                    </LinearLayout>

                </com.box.common.ui.layout.StatusLayout>

            </androidx.core.widget.NestedScrollView>

            <com.box.other.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout>

        <com.box.common.ui.view.VerticalDrawableTextView
            android:id="@+id/textRight"
            android:layout_width="@dimen/idp_22"
            android:layout_height="@dimen/idp_300"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/idp_120"
            android:background="@drawable/fragment_h5_game_you_bg"
            android:drawableTop="@drawable/fragment_h5_game_you_top_icon"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/idp_7"
            android:text="左滑玩免费手游"
            android:textColor="@color/white"
            android:textSize="@dimen/isp_12"
            android:visibility="gone" />
    </RelativeLayout>
</layout>