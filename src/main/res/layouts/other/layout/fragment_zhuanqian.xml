<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="vm"
            type="com.zqhy.mod.fragment.NavigationZhuanQianModel" />

        <variable
            name="click"
            type="com.zqhy.mod.fragment.FragmentZhuanQian.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_12"
            android:layout_marginVertical="@dimen/idp_5"
            android:background="@drawable/a_rounded_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/idp_5"
                android:layout_weight="1"
                android:background="@drawable/bg_xiao_game_title_1_selector"
                android:onClick="@{()-> click.daiJinQuan()}"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/idp_10"
                android:paddingVertical="@dimen/idp_5">

                <TextView
                    android:id="@+id/title1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="代金券"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title1_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/idp_5"
                    android:layout_toEndOf="@id/title1_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{StringUtils.isEmpty(vm.xiaoGame.marketjson.coupon_count)?&quot;0&quot;:vm.xiaoGame.marketjson.coupon_count}"
                    android:textColor="#FF4B7E"
                    android:textSize="@dimen/isp_16"
                    android:textStyle="bold"
                    tools:text="9999" />

                <TextView
                    android:id="@+id/title1_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/title1_count"
                    android:text=" 张"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_12" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/idp_5"
                    android:layout_toEndOf="@id/title1_z"
                    android:gravity="end"
                    android:src="@drawable/bg_f_xiao_game_title_1_icon" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_5"
                android:layout_weight="1"
                android:background="@drawable/bg_xiao_game_title_2_selector"
                android:onClick="@{()-> click.fuLiBi()}"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/idp_10"
                android:paddingVertical="@dimen/idp_5">

                <TextView
                    android:id="@+id/title2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="福利币"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title2_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/idp_5"
                    android:layout_toEndOf="@id/title2_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{StringUtils.isEmpty(vm.xiaoGame.marketjson.ptb_dc)?&quot;0&quot;:vm.xiaoGame.marketjson.ptb_dc}"
                    android:textColor="#FF4B7E"
                    android:textSize="@dimen/isp_16"
                    android:textStyle="bold"
                    tools:text="9999" />

                <TextView
                    android:id="@+id/title2_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/title2_count"
                    android:text=" 个"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_12" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/idp_5"
                    android:layout_toEndOf="@id/title2_z"
                    android:gravity="end"
                    android:src="@drawable/bg_f_xiao_game_title_2_icon" />
            </RelativeLayout>

        </LinearLayout>

        <com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlReboundDuration="700"
            app:srlEnableHeaderTranslationContent="true"
            app:srlEnableOverScrollBounce="true"
            app:srlEnableOverScrollDrag="true"
            app:srlEnableLoadMore="true"
            app:srlEnableRefresh="false"
            app:tab_draw_divider="true">

            <com.chaoji.other.scwang.smart.refresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/idp_2"
                android:orientation="horizontal"
                bind:itemCount="2"
                tools:listitem="@layout/item_xiao_game" />

            <com.chaoji.other.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>