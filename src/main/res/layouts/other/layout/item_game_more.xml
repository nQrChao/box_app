<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="gameHallListBean"
            type="com.chaoji.im.data.model.ModGameHallList" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mod_main_layout_bg"
        android:orientation="vertical"
        android:paddingVertical="@dimen/idp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/idp_10">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_60"
                android:layout_height="@dimen/idp_60"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mod_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadRound11Image="@{gameHallListBean.gameicon}" />

            <LinearLayout
                android:id="@+id/midLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{gameHallListBean.displayName}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_15"
                    android:textStyle="bold"
                    tools:text="仙剑奇侠传" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_3"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{StringUtils.format(&quot;%s | %s&quot;, gameHallListBean.genre_str,gameHallListBean.game_summary)}"
                    android:textColor="@color/text_hit_color"
                    android:textSize="@dimen/isp_12"
                    tools:text="回合 武侠" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/a_xiao_game_list_item_tip_bg1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/idp_5"
                        android:paddingVertical="@dimen/idp_2"
                        android:text="@{StringUtils.format(&quot;%sw人在玩&quot;, gameHallListBean.getRandomPlayerCount)}"
                        android:textColor="#FF7734"
                        android:textSize="@dimen/isp_10"
                        tools:text="21.5w人在玩" />

                    <TextView
                        android:id="@+id/tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/idp_3"
                        android:background="@drawable/a_xiao_game_list_item_tip_bg2"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/idp_5"
                        android:paddingVertical="@dimen/idp_2"
                        android:text="官方免费"
                        android:textColor="#3F68FF"
                        android:textSize="@dimen/isp_10"
                        tools:text="官方免费" />

                    <TextView
                        android:id="@+id/tip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/idp_3"
                        android:background="@drawable/a_xiao_game_list_item_tip_bg2"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/idp_5"
                        android:paddingVertical="@dimen/idp_2"
                        android:text="免广告"
                        android:textColor="#3F68FF"
                        android:textSize="@dimen/isp_10"
                        tools:text="免广告" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/startGame"
                android:layout_width="@dimen/idp_65"
                android:layout_height="@dimen/idp_25"
                android:background="@drawable/a_xiao_game_list_item_button"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="秒玩"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_12"
                android:textStyle="bold"
                tools:text="秒玩" />

        </LinearLayout>


    </LinearLayout>


</layout>

